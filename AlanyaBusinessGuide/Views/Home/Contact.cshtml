@model ContactViewModel
@{
    ViewData["Title"] = "İletişim - Alanya İşletme Rehberi";
}

<!-- Hero Section -->
<section class="contact-hero">
    <div class="contact-hero__overlay"></div>
    <div class="contact-hero__glow contact-hero__glow--left"></div>
    <div class="contact-hero__glow contact-hero__glow--right"></div>
    <div class="container position-relative">
        <div class="row justify-content-center text-center">
            <div class="col-xl-7 col-lg-8">
                <div class="mb-4">
                    <img src="~/images/Logo.png" alt="Alanya İşletme Rehberi Logo" class="contact-hero-logo mb-3" onerror="this.onerror=null; this.src='~/images/Logo.jpg';" />
                </div>
                <span class="badge contact-hero__badge">
                    <i class="fas fa-location-dot me-2 text-warning"></i>Alanya İşletme Rehberi
                </span>
                <h1 class="display-4 fw-bold mb-3">
                    Bölgenin En Güçlü İşletme Ağına <span class="text-gradient">Ulaşın</span>
                </h1>
                <p class="lead mb-4">
                    Sorularınız, talepleriniz veya iş birlikleri için ekibimizle her zaman iletişime geçebilirsiniz. 
                    İşletmeniz için doğru çözümleri birlikte planlayalım.
                </p>
                <div class="contact-hero__chips d-flex flex-wrap justify-content-center gap-3">
                    <span class="chip">
                        <i class="fas fa-headset me-2"></i>48 saat içinde dönüş
                    </span>
                    <span class="chip">
                        <i class="fas fa-robot me-2"></i>Akıllı eşleşme motoru
                    </span>
                    <span class="chip">
                        <i class="fas fa-shield-alt me-2"></i>KVKK uyumlu altyapı
                    </span>
                </div>
            </div>
        </div>

        <div class="row g-4 justify-content-center mt-5">
            <div class="col-md-4 col-sm-6">
                <div class="contact-hero__metric">
                    <i class="fas fa-users"></i>
                    <div>
                        <h5 class="mb-1">5000+</h5>
                        <p class="mb-0">Aktif kullanıcı</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="contact-hero__metric">
                    <i class="fas fa-building"></i>
                    <div>
                        <h5 class="mb-1">650+</h5>
                        <p class="mb-0">İşletme profili</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="contact-hero__metric">
                    <i class="fas fa-clock"></i>
                    <div>
                        <h5 class="mb-1">7/24</h5>
                        <p class="mb-0">Destek hattı</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- İletişim Bilgileri -->
<section class="contact-content py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-5">
                <div class="glass-card h-100">
                    <h3 class="section-title mb-2">
                        <i class="fas fa-map-marked-alt me-2 text-warning"></i>Merkez Ofis
                    </h3>
                    <p class="section-subtitle mb-4">Alanya'nın kalbinde, işletmelerinizi geleceğe hazırlayan dijital üssümüz.</p>

                    <div class="contact-info-list">
                        <div class="contact-info-item">
                            <span class="icon">
                                <i class="fas fa-location-dot"></i>
                            </span>
                            <div>
                                <span class="label">Adres</span>
                                <p class="mb-0">
                                    Atatürk Caddesi No: 123<br>
                                    Alanya Merkez Mahallesi<br>
                                    Alanya / Antalya
                                </p>
                            </div>
                        </div>

                        <div class="contact-info-item">
                            <span class="icon">
                                <i class="fas fa-phone-volume"></i>
                            </span>
                            <div>
                                <span class="label">Telefon</span>
                                <a href="tel:+902422123456" class="d-block">+90 242 212 34 56</a>
                                <small class="text-muted">Hafta içi: 09:00 - 18:00</small>
                            </div>
                        </div>

                        <div class="contact-info-item">
                            <span class="icon">
                                <i class="fas fa-envelope-open-text"></i>
                            </span>
                            <div>
                                <span class="label">E-posta</span>
                                <a href="mailto:info@alanyabusinessguide.com" class="d-block">info@alanyabusinessguide.com</a>
                                <a href="mailto:destek@alanyabusinessguide.com" class="d-block">destek@alanyabusinessguide.com</a>
                            </div>
                        </div>

                        <div class="contact-info-item">
                            <span class="icon">
                                <i class="fas fa-clock"></i>
                            </span>
                            <div>
                                <span class="label">Çalışma Saatleri</span>
                                <p class="mb-0">
                                    <strong>Pazartesi - Cuma:</strong> 09:00 - 18:00<br>
                                    <strong>Cumartesi:</strong> 10:00 - 16:00
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="contact-hotline mt-4">
                        <span class="title"><i class="fas fa-comments me-2"></i>Canlı Destek</span>
                        <p class="mb-3">WhatsApp hattımız üzerinden bize saniyeler içinde ulaşabilirsiniz.</p>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="tel:+905511746672" class="btn btn-primary flex-fill">
                                <i class="fas fa-phone me-2"></i>Destek Hattını Ara
                            </a>
                            <a href="https://wa.me/905511746672" class="btn btn-outline-light flex-fill" target="_blank">
                                <i class="fab fa-whatsapp me-2"></i>WhatsApp
                            </a>
                        </div>
                    </div>

                    <div class="contact-social mt-4">
                        <span class="title">Bizi Takip Edin</span>
                        <div class="d-flex flex-wrap gap-3">
                            <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="glass-card contact-form-card">
                    <div class="contact-form-header d-flex align-items-center justify-content-between flex-wrap gap-3">
                        <div>
                            <h3 class="section-title mb-1"><i class="fas fa-paper-plane me-2 text-warning"></i>Mesajınızı Gönderin</h3>
                            <p class="section-subtitle mb-0">Uzman ekibimiz en geç 24 saat içinde sizinle iletişime geçer.</p>
                        </div>
                        <div class="response-badge">
                            <i class="fas fa-bolt me-2"></i>Ortalama Yanıt: 12 Saat
                        </div>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success-custom mt-4" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Contact" method="post" class="contact-form mt-4">
                        @Html.AntiForgeryToken()
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger-custom mb-4" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <div asp-validation-summary="All" class="mb-0"></div>
                            </div>
                        }

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Ad Soyad</label>
                                <input asp-for="Name" type="text" class="form-control" placeholder="Adınız ve soyadınız">
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">E-posta</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com">
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label">Telefon <small class="text-muted">(Opsiyonel)</small></label>
                                <input asp-for="Phone" type="tel" class="form-control" placeholder="+90 5XX XXX XX XX">
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Subject" class="form-label">Konu</label>
                                <select asp-for="Subject" class="form-select">
                                    <option value="">Bir konu seçin</option>
                                    <option value="Genel Bilgi">Genel Bilgi</option>
                                    <option value="İşletme Kaydı">İşletme Kaydı</option>
                                    <option value="Şikayet / Destek">Şikayet / Destek</option>
                                    <option value="Öneri">Öneri</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                                <span asp-validation-for="Subject" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Message" class="form-label">Mesajınız</label>
                                <textarea asp-for="Message" class="form-control" rows="6" placeholder="Bize nasıl yardımcı olmamızı istersiniz?"></textarea>
                                <span asp-validation-for="Message" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="contact-form__footer mt-4 d-flex flex-column flex-md-row gap-3 align-items-md-center">
                            <div class="d-flex align-items-center gap-3">
                                <span class="privacy-badge"><i class="fas fa-shield-check me-2"></i>Verileriniz güvende</span>
                                <small class="text-muted">Gönderim ile KVKK politikamızı kabul etmiş olursunuz.</small>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg ms-md-auto" id="submitBtn">
                                <i class="fas fa-paper-plane me-2"></i>Mesajı Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Harita Bölümü -->
<section class="contact-map py-5">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-xl-6 col-lg-7">
                <h2 class="section-title mb-3">
                    <i class="fas fa-map me-2 text-warning"></i>Konumumuz
                </h2>
                <p class="section-subtitle mb-0">Alanya merkezindeki ofisimize uğrayarak kahvemizi paylaşın, projenizi görüşelim.</p>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="glass-card map-card overflow-hidden">
                    <div class="map-placeholder">
                        <div class="map-placeholder__content text-center">
                            <i class="fas fa-map-marked-alt fa-3x mb-3"></i>
                            <h5 class="mb-1">Harita yakında burada</h5>
                            <p class="mb-2 text-muted">Google Maps entegrasyonu hazırlanıyor. Bu sırada konum bilgisi aşağıdaki gibidir.</p>
                            <small>Atatürk Caddesi No: 123, Alanya / Antalya</small>
                        </div>
                    </div>
                    <div class="map-card__footer d-flex flex-column flex-md-row align-items-center justify-content-between gap-3">
                        <div>
                            <span class="badge rounded-pill bg-warning text-dark me-2"><i class="fas fa-car me-1"></i>Otopark mevcut</span>
                            <span class="badge rounded-pill bg-info text-dark"><i class="fas fa-bus me-1"></i>Toplu taşıma ile ulaşım kolay</span>
                        </div>
                        <a href="https://goo.gl/maps/" class="btn btn-outline-light" target="_blank">
                            <i class="fas fa-location-arrow me-2"></i>Google Maps'te aç
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SSS Bölümü -->
<section class="contact-faq py-5">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-xl-6 col-lg-8">
                <h2 class="section-title mb-3">
                    <i class="fas fa-question-circle me-2 text-warning"></i>Sıkça Sorulan Sorular
                </h2>
                <p class="section-subtitle mb-0">Platformumuz, işletmeler ve kullanıcılar tarafından en çok merak edilen konuların yanıtları.</p>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-xl-8">
                <div class="accordion accordion-flush contact-accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="faqHeading1">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1" aria-expanded="true" aria-controls="faq1">
                                <span class="accordion-icon"><i class="fas fa-building"></i></span>
                                İşletmemi nasıl kaydedebilirim?
                            </button>
                        </h2>
                        <div id="faq1" class="accordion-collapse collapse show" aria-labelledby="faqHeading1" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                İşletmenizi eklemek için önce üye olun, ardından "İşletme Ekle" adımlarını takip edin. Ekibimiz bilgilerinizi doğruladıktan sonra işletmeniz 1-2 iş günü içinde yayına alınır.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="faqHeading2">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2" aria-expanded="false" aria-controls="faq2">
                                <span class="accordion-icon"><i class="fas fa-star"></i></span>
                                Yorumlar nasıl değerlendiriliyor?
                            </button>
                        </h2>
                        <div id="faq2" class="accordion-collapse collapse" aria-labelledby="faqHeading2" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Tüm yorumlar otomatik içerik filtresi ve manuel moderasyon süreçlerinden geçer. Topluluk kurallarına aykırı, hakaret içeren veya spam nitelikli yorumlar yayına alınmaz.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="faqHeading3">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3" aria-expanded="false" aria-controls="faq3">
                                <span class="accordion-icon"><i class="fas fa-calendar-check"></i></span>
                                Rezervasyon nasıl yapılır?
                            </button>
                        </h2>
                        <div id="faq3" class="accordion-collapse collapse" aria-labelledby="faqHeading3" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                İlgilendiğiniz işletmenin sayfasında "Rezervasyon Yap" butonuna basın, tarih ve saat seçin ve talebinizi gönderin. İşletme onayladığında hem e-posta hem de paneliniz üzerinden bilgilendirilirsiniz.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="faqHeading4">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4" aria-expanded="false" aria-controls="faq4">
                                <span class="accordion-icon"><i class="fas fa-heart"></i></span>
                                Favori işletmelerimi nasıl kaydederim?
                            </button>
                        </h2>
                        <div id="faq4" class="accordion-collapse collapse" aria-labelledby="faqHeading4" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                İşletme kartlarında yer alan kalp ikonuna tıklayarak favorilerinize ekleyebilirsiniz. Favorileriniz hesabınızdaki "Panelim" sayfasında düzenlenebilir.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="faqHeading5">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5" aria-expanded="false" aria-controls="faq5">
                                <span class="accordion-icon"><i class="fas fa-shield-alt"></i></span>
                                Verilerim güvende mi?
                            </button>
                        </h2>
                        <div id="faq5" class="accordion-collapse collapse" aria-labelledby="faqHeading5" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Tüm veri aktarımı SSL ile şifrelenir. KVKK ve GDPR standartlarına uyumlu altyapımız sayesinde bilgileriniz üçüncü kişilerle paylaşılmaz.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Custom CSS -->
<style>
    .contact-hero {
        position: relative;
        overflow: hidden;
        width: 100%;
        margin: 0;
        padding: min(18vh, 200px) 0 6rem;
        background: linear-gradient(140deg, rgba(7,17,38,0.92) 0%, rgba(7,17,38,0.65) 55%, rgba(7,17,38,0.92) 100%), url('/images/190_alanya.jpg') center/cover no-repeat;
    }

    .contact-hero__overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(160deg, rgba(7,17,38,0.85) 0%, rgba(7,17,38,0.3) 60%, rgba(7,17,38,0.85) 100%);
        backdrop-filter: blur(3px);
    }

    .contact-hero__glow {
        position: absolute;
        width: 480px;
        height: 480px;
        background: radial-gradient(circle, rgba(255,193,7,0.28) 0%, rgba(255,193,7,0) 70%);
        filter: blur(0px);
        opacity: .8;
    }

    .contact-hero__glow--left {
        top: -140px;
        left: -160px;
    }

    .contact-hero__glow--right {
        bottom: -180px;
        right: -120px;
    }

    .contact-hero .container {
        position: relative;
        z-index: 1;
    }

    .contact-hero-logo {
        height: 100px;
        width: auto;
        object-fit: contain;
        max-width: 300px;
        filter: drop-shadow(0 6px 14px rgba(0,0,0,0.5));
        transition: all 0.3s ease;
    }

    .contact-hero-logo:hover {
        transform: scale(1.08);
        filter: drop-shadow(0 8px 18px rgba(255,193,7,0.4));
    }

    @@media (max-width: 768px) {
        .contact-hero-logo {
            height: 80px;
            max-width: 220px;
        }
    }

    .contact-hero__badge {
        background: rgba(255,255,255,0.08);
        color: var(--text);
        padding: .65rem 1.4rem;
        border-radius: 999px;
        letter-spacing: 0.05em;
        font-size: .85rem;
        text-transform: uppercase;
    }

    .text-gradient {
        background: linear-gradient(90deg, #ffd166 0%, #f97316 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .contact-hero__chips {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.75rem; /* Adjusted gap for better spacing */
    }

    .contact-hero__chips .chip {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        padding: .65rem 1.25rem;
        border-radius: 999px;
        background: rgba(15,23,42,0.75);
        border: 1px solid rgba(148,163,184,0.18);
        color: var(--text);
        font-size: .95rem;
        backdrop-filter: blur(6px);
        text-align: left;
    }

    .contact-hero__chips .chip i {
        color: var(--accent);
    }

    .contact-hero__metric {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.35rem 1.5rem;
        background: rgba(17,24,39,0.72);
        border: 1px solid rgba(148,163,184,0.18);
        border-radius: 1.25rem;
        backdrop-filter: blur(8px);
        height: 100%;
    }

    .contact-hero__metric i {
        font-size: 1.9rem;
        color: var(--accent);
    }

    .contact-hero__metric h5 {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: .15rem;
    }

    .glass-card {
        background: rgba(17,24,39,0.78);
        border: 1px solid rgba(148,163,184,0.18);
        border-radius: 1.25rem;
        padding: 2.5rem;
        backdrop-filter: blur(12px);
        box-shadow: 0 24px 60px rgba(7,12,24,0.45);
    }

    .section-title {
        font-size: 1.45rem;
        font-weight: 700;
    }

    .section-subtitle {
        color: rgba(226,232,240,0.68);
        font-size: 1rem;
    }

    .contact-info-list {
        display: flex;
        flex-direction: column;
        gap: 1.4rem;
    }

    .contact-info-item {
        display: flex;
        gap: 1rem;
        align-items: flex-start;
    }

    .contact-info-item .icon {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        background: rgba(255,255,255,0.06);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        color: var(--accent);
    }

    .contact-info-item .label {
        display: block;
        font-size: .85rem;
        text-transform: uppercase;
        letter-spacing: .08em;
        color: rgba(226,232,240,0.6);
        margin-bottom: .25rem;
    }

    .contact-info-item a {
        color: var(--text);
        text-decoration: none;
        font-weight: 600;
    }

    .contact-hotline {
        margin-top: 2rem;
        padding: 1.75rem;
        border-radius: 1.1rem;
        background: rgba(14,116,144,0.14);
        border: 1px solid rgba(125,211,252,0.18);
    }

    .contact-hotline .title {
        display: block;
        font-weight: 600;
        margin-bottom: .75rem;
    }

    .contact-social {
        margin-top: 2.25rem;
    }

    .contact-social .title {
        display: block;
        font-weight: 600;
        margin-bottom: .75rem;
    }

    .social-link {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(255,255,255,0.18);
        color: var(--text);
        transition: transform .25s ease, border-color .25s ease, color .25s ease;
    }

    .social-link:hover {
        transform: translateY(-4px);
        border-color: var(--accent);
        color: var(--accent);
    }

    .contact-form-card {
        padding: 2.5rem;
    }

    .contact-form-header .response-badge,
    .response-badge {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        padding: .55rem 1.15rem;
        border-radius: 999px;
