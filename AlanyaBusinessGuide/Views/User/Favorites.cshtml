@model IEnumerable<AlanyaBusinessGuide.Models.UserFavorite>

@{
    ViewData["Title"] = "Favorilerim";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Favorilerim</h1>
        <span class="badge badge-primary">@Model.Count() favori</span>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var favorite in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow h-100">
                        @if (!string.IsNullOrEmpty(favorite.Business?.ImageUrl))
                        {
                            <img src="@favorite.Business.ImageUrl" class="card-img-top" alt="@favorite.Business.Name" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-building fa-3x text-muted"></i>
                            </div>
                        }
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@favorite.Business?.Name</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-tag"></i> @favorite.Business?.Category
                                </small>
                            </p>
                            <p class="card-text">@(favorite.Business?.Description?.Length > 100 ? favorite.Business.Description.Substring(0, 100) + "..." : favorite.Business?.Description)</p>
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div class="text-warning">
                                        @if (favorite.Business?.AverageRating > 0)
                                        {
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= favorite.Business.AverageRating)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else if (i - 0.5 <= favorite.Business.AverageRating)
                                                {
                                                    <i class="fas fa-star-half-alt"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                            <span class="ml-1">(@favorite.Business.AverageRating.ToString("F1"))</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Henüz değerlendirilmemiş</span>
                                        }
                                    </div>
                                    <small class="text-muted">@favorite.Business?.TotalReviews yorum</small>
                                </div>
                                
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("BusinessDetails", new { id = favorite.BusinessId })" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye"></i> Detaylar
                                    </a>
                                    <button class="btn btn-outline-danger btn-sm remove-favorite-btn" data-business-id="@favorite.BusinessId">
                                        <i class="fas fa-heart-broken"></i> Favoriden Çıkar
                                    </button>
                                </div>
                                <small class="text-muted mt-2 d-block">
                                    <i class="fas fa-calendar"></i> @favorite.AddedDate.ToString("dd.MM.yyyy") tarihinde eklendi
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-heart fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Henüz favori işletmeniz yok</h4>
            <p class="text-muted">Beğendiğiniz işletmeleri favorilerinize ekleyebilirsiniz.</p>
            <a href="@Url.Action("Businesses")" class="btn btn-primary">
                <i class="fas fa-search"></i> İşletmeleri Keşfet
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.remove-favorite-btn').click(function() {
                var businessId = $(this).data('business-id');
                var button = $(this);
                var card = button.closest('.col-lg-4');
                
                if (confirm('Bu işletmeyi favorilerinizden çıkarmak istediğinizden emin misiniz?')) {
                    $.ajax({
                        url: '@Url.Action("ToggleFavorite")',
                        type: 'POST',
                        data: { businessId: businessId },
                        success: function(response) {
                            if (response.success) {
                                card.fadeOut(300, function() {
                                    $(this).remove();
                                });
                            }
                            alert(response.message);
                        },
                        error: function() {
                            alert('Bir hata oluştu. Lütfen tekrar deneyin.');
                        }
                    });
                }
            });
        });
    </script>
}
