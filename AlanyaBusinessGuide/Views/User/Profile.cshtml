@model AlanyaBusinessGuide.ViewModels.UserProfileViewModel
@using System.IO;
@using System.Linq;

@{
    ViewData["Title"] = "Profil";
    var defaultAvatars = Model.DefaultAvatars ?? Enumerable.Empty<string>();
    var currentAvatar = string.IsNullOrWhiteSpace(Model.CurrentAvatarUrl)
        ? Url.Content("~/images/default-avatar.svg")
        : Url.Content(Model.CurrentAvatarUrl.StartsWith("/") ? "~" + Model.CurrentAvatarUrl : (Model.CurrentAvatarUrl.StartsWith("~/") ? Model.CurrentAvatarUrl : "~/" + Model.CurrentAvatarUrl));
    var locationText = !string.IsNullOrEmpty(Model.City) && !string.IsNullOrEmpty(Model.Country) 
        ? $"{Model.City}, {Model.Country}" 
        : (!string.IsNullOrEmpty(Model.Country) ? Model.Country : "Konum belirtilmemiş");
}

<div class="container-fluid py-4">
    <div class="row g-4 profile-layout">
        <div class="col-xl-3">
            <div class="profile-sidebar glass-card sticky-sidebar">
                <div class="sidebar-header">
                    <h5 class="mb-2">Profil Panosu</h5>
                    <p class="text-muted mb-0">Tüm bölümlere buradan ulaşın</p>
            </div>
                <nav class="profile-nav flex-column" id="profileNav">
                    <a href="#section-overview" class="profile-nav-link active">
                        <i class="fas fa-user-circle me-2"></i>Genel Bilgiler
                    </a>
                    <a href="#section-security" class="profile-nav-link">
                        <i class="fas fa-shield-alt me-2"></i>Güvenlik
                    </a>
                    <a href="#section-location" class="profile-nav-link">
                        <i class="fas fa-map-marked-alt me-2"></i>Konum
                    </a>
                    <a href="#section-media" class="profile-nav-link">
                        <i class="fas fa-images me-2"></i>Fotoğraflar
                    </a>
                </nav>
        </div>
    </div>

        <div class="col-xl-9">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
                <div class="alert alert-danger glass-card alert-dismissible fade show" role="alert" style="margin-bottom: 2rem;">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-3" style="font-size: 1.5rem;"></i>
                <div class="flex-grow-1">
                    <strong class="me-2">Hata!</strong>
                    <span>@Model.ErrorMessage</span>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
                <div class="alert alert-success glass-card alert-dismissible fade show" role="alert" style="margin-bottom: 2rem;">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3" style="font-size: 1.5rem;"></i>
                <div class="flex-grow-1">
                    <strong class="me-2">Başarılı!</strong>
                    <span>@Model.SuccessMessage</span>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

            <section id="section-overview" class="profile-section mb-4" data-profile-section>

    <div class="row g-4">
        <div class="col-xl-4">
            <div class="profile-avatar card glass-card h-100">
                <div class="card-body">
                    <h5 class="section-heading mb-4">
                        <span class="icon-circle me-2"><i class="fas fa-user-circle"></i></span>
                        Profil Fotoğrafı
                    </h5>

                    <div class="avatar-preview mb-4">
                        <img src="@currentAvatar" alt="Profil avatarı" id="avatarPreview" class="avatar-image" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Varsayılan Avatarlar</label>
                        <div class="avatar-options">
                            @foreach (var avatar in defaultAvatars)
                            {
                                var isChecked = string.Equals(Model.CurrentAvatarUrl, avatar, StringComparison.OrdinalIgnoreCase);
                                var avatarId = $"avatar_{System.IO.Path.GetFileNameWithoutExtension(avatar)}";
                                <label class="avatar-option @(isChecked ? "active" : "")" for="@avatarId">
                                    <input type="radio" id="@avatarId" name="avatarOption" value="@avatar" @(isChecked ? "checked" : "") />
                                    <img src="@Url.Content("~" + avatar)" alt="Avatar seçeneği" />
                                </label>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Özel görsel yükle</label>
                        <div class="upload-wrapper">
                            <input type="file" class="form-control" name="AvatarFile" form="profileForm" accept="image/*">
                            <small class="text-muted d-block mt-2">Desteklenen formatlar: .png, .jpg, .jpeg, .webp, .svg (maks. 2MB)</small>
                        </div>
                    </div>

