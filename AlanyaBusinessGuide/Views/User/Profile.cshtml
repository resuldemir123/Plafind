@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            // Sidebar Navigation
            const navContainer = document.getElementById('profileNav');
            if (navContainer) {
                const navLinks = navContainer.querySelectorAll('.profile-nav-link');
                const sections = document.querySelectorAll('[data-profile-section]');

                // Smooth scroll and active state management
                navLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        const targetId = this.getAttribute('href');
                        const targetSection = document.querySelector(targetId);
                        
                        if (targetSection) {
                            // Remove active class from all links
                            navLinks.forEach(l => l.classList.remove('active'));
                            // Add active class to clicked link
                            this.classList.add('active');
                            
                            // Smooth scroll to section
                            targetSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                        }
                    });
                });

                // Update active link on scroll
                const observerOptions = {
                    root: null,
                    rootMargin: '-100px 0px -50% 0px',
                    threshold: 0
                };

                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const id = entry.target.getAttribute('id');
                            navLinks.forEach(link => {
                                link.classList.remove('active');
                                if (link.getAttribute('href') === `#${id}`) {
                                    link.classList.add('active');
                                }
                            });
                        }
                    });
                }, observerOptions);

                sections.forEach(section => observer.observe(section));
            }


            // Old Profile Code
            const avatarOptions = document.querySelectorAll('.avatar-option input[type="radio"]');
            const selectedAvatarInput = document.getElementById('selectedAvatarInput');
            const avatarPreview = document.getElementById('avatarPreview');
            const fileInput = document.querySelector('input[name="AvatarFile"]');
            const resetBtn = document.getElementById('resetAvatarBtn');
            const defaultAvatar = '@Url.Content("~/images/default-avatar.svg")';

            avatarOptions.forEach(option => {
                option.addEventListener('change', function () {
                    selectedAvatarInput.value = this.value;
                    avatarPreview.src = this.nextElementSibling.src;

                    document.querySelectorAll('.avatar-option').forEach(opt => opt.classList.remove('active'));
                    this.closest('.avatar-option').classList.add('active');

                    if (fileInput) {
                        fileInput.value = '';
                    }
                });
            });

            if (fileInput) {
                fileInput.addEventListener('change', function () {
                    if (this.files && this.files[0]) {
                        selectedAvatarInput.value = '';
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            avatarPreview.src = e.target.result;
                        };
                        reader.readAsDataURL(this.files[0]);

                        document.querySelectorAll('.avatar-option').forEach(opt => opt.classList.remove('active'));
                    }
                });
            }

            if (resetBtn) {
                resetBtn.addEventListener('click', function () {
                    selectedAvatarInput.value = '';
                    avatarPreview.src = defaultAvatar;
                    if (fileInput) {
                        fileInput.value = '';
                    }
                    document.querySelectorAll('.avatar-option').forEach(opt => opt.classList.remove('active'));
                });
            }

            // Şehir seçimi için
            const citySelect = document.getElementById('citySelect');
            if (citySelect) {
                citySelect.value = '@Model.City';
            }

            // Profil düzenleme modu
            const editProfileBtn = document.getElementById('editProfileBtn');
            const cancelEditBtn = document.getElementById('cancelEditBtn');
            const profileViewMode = document.getElementById('profileViewMode');
            const profileForm = document.getElementById('profileForm');
            const saveButtonsContainer = document.getElementById('saveButtonsContainer');

            if (editProfileBtn) {
                editProfileBtn.addEventListener('click', function() {
                    profileViewMode.style.display = 'none';
                    profileForm.style.display = 'block';
                    saveButtonsContainer.style.display = 'flex';
                    profileForm.scrollIntoView({ behavior: 'smooth', block: 'start' });
                });
            }

            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', function() {
                    profileForm.style.display = 'none';
                    saveButtonsContainer.style.display = 'none';
                    profileViewMode.style.display = 'block';
                    profileViewMode.scrollIntoView({ behavior: 'smooth', block: 'start' });
                });
            }

            // Ülke seçimi için
            const countrySelect = document.getElementById('countrySelect');
            const citySelectContainer = document.getElementById('citySelectContainer');
            const cityViewContainer = document.getElementById('cityViewContainer');
            
            function toggleCitySelect() {
                if (countrySelect && citySelectContainer) {
                    if (countrySelect.value === 'Türkiye') {
                        citySelectContainer.style.display = 'block';
                    } else {
                        citySelectContainer.style.display = 'none';
                        const citySelect = document.getElementById('citySelect');
                        if (citySelect) {
                            citySelect.value = '';
                        }
                    }
                }
            }

            if (countrySelect) {
                countrySelect.value = '@Model.Country';
                countrySelect.addEventListener('change', function() {
                    toggleCitySelect();
                    // Görüntüleme modundaki şehir görünürlüğünü güncelle
                    if (cityViewContainer) {
                        if (this.value === 'Türkiye') {
                            cityViewContainer.style.display = 'block';
                        } else {
                            cityViewContainer.style.display = 'none';
                        }
                    }
                });
                toggleCitySelect(); // İlk yüklemede kontrol et
            }

            // Fotoğraf silme
            document.querySelectorAll('.delete-photo-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const photoId = this.getAttribute('data-photo-id');
                    if (confirm('Bu fotoğrafı silmek istediğinize emin misiniz?')) {
                        fetch('@Url.Action("DeletePhoto", "User")', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            },
                            body: JSON.stringify({ photoId: photoId })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                location.reload();
                            } else {
                                alert('Fotoğraf silinirken bir hata oluştu.');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('Fotoğraf silinirken bir hata oluştu.');
                        });
                    }
                });
            });

            // Kenar menü aktive etme
            const navContainer = document.getElementById('profileNav');
            const sectionElements = document.querySelectorAll('[data-profile-section]');

            if (navContainer && sectionElements.length) {
                const navLinks = navContainer.querySelectorAll('.profile-nav-link');

                const setActiveLink = (targetId) => {
                    if (!targetId) return;
                    navLinks.forEach(link => {
                        if (link.getAttribute('href') === `#${targetId}`) {
                            link.classList.add('active');
                        } else {
                            link.classList.remove('active');
                        }
                    });
                };

                navLinks.forEach(link => {
                    link.addEventListener('click', function() {
                        navLinks.forEach(l => l.classList.remove('active'));
                        this.classList.add('active');
                    });
                });

                if ('IntersectionObserver' in window) {
                    const observer = new IntersectionObserver((entries) => {
                        entries.forEach(entry => {
                            if (entry.isIntersecting) {
                                setActiveLink(entry.target.getAttribute('id'));
                            }
                        });
                    }, {
                        rootMargin: '-45% 0px -45% 0px',
                        threshold: 0.2
                    });

                    sectionElements.forEach(section => observer.observe(section));
                    setActiveLink(sectionElements[0].getAttribute('id'));
                }
            }
        })();
    </script>
}
