@model IEnumerable<AlanyaBusinessGuide.Models.Business>

@{
    ViewData["Title"] = "İşletmeler";
    var categories = ViewBag.Categories as List<string>;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">İşletmeler</h1>
    </div>

    <!-- Filtreler -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="get" class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="search">Arama</label>
                        <input type="text" name="search" class="form-control" value="@ViewBag.Search" placeholder="İşletme adı veya açıklama..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="category">Kategori</label>
                        <select name="category" class="form-control">
                            <option value="">Tüm Kategoriler</option>
                            @if (categories != null)
                            {
                                @foreach (var category in categories)
                                {
                                    <option value="@category" selected="@(ViewBag.Category == category)">@category</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Filtrele
                            </button>
                            <a href="@Url.Action("Businesses")" class="btn btn-secondary">Temizle</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- İşletmeler -->
    <div class="row">
        @foreach (var business in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow h-100">
                    @if (!string.IsNullOrEmpty(business.ImageUrl))
                    {
                        <img src="@business.ImageUrl" class="card-img-top" alt="@business.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-building fa-3x text-muted"></i>
                        </div>
                    }
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@business.Name</h5>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-tag"></i> @business.Category
                            </small>
                        </p>
                        <p class="card-text">@(business.Description?.Length > 100 ? business.Description.Substring(0, 100) + "..." : business.Description)</p>
                        
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="text-warning">
                                    @if (business.AverageRating > 0)
                                    {
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= business.AverageRating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else if (i - 0.5 <= business.AverageRating)
                                            {
                                                <i class="fas fa-star-half-alt"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                        <span class="ml-1">(@business.AverageRating.ToString("F1"))</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Henüz değerlendirilmemiş</span>
                                    }
                                </div>
                                <small class="text-muted">@business.TotalReviews yorum</small>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="@Url.Action("BusinessDetails", new { id = business.Id })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> Detaylar
                                </a>
                                <button class="btn btn-outline-danger btn-sm favorite-btn" data-business-id="@business.Id">
                                    <i class="far fa-heart"></i> Favori
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">İşletme bulunamadı</h4>
            <p class="text-muted">Arama kriterlerinizi değiştirerek tekrar deneyin.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.favorite-btn').click(function() {
                var businessId = $(this).data('business-id');
                var button = $(this);
                
                $.ajax({
                    url: '@Url.Action("ToggleFavorite")',
                    type: 'POST',
                    data: { businessId: businessId },
                    success: function(response) {
                        if (response.success) {
                            if (response.isFavorite) {
                                button.html('<i class="fas fa-heart"></i> Favori');
                                button.removeClass('btn-outline-danger').addClass('btn-danger');
                            } else {
                                button.html('<i class="far fa-heart"></i> Favori');
                                button.removeClass('btn-danger').addClass('btn-outline-danger');
                            }
                        }
                        alert(response.message);
                    },
                    error: function() {
                        alert('Bir hata oluştu. Lütfen tekrar deneyin.');
                    }
                });
            });
        });
    </script>
}
