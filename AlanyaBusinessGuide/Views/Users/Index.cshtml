@model IEnumerable<AlanyaBusinessGuide.Models.ApplicationUser>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<h2>Kullanıcı Listesi</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Ad Soyad</th>
            <th>Oluşturulma Tarihi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>@user.CreatedDate.ToString("dd/MM/yyyy")</td>
                <td>@(user.IsActive ? "Aktif" : "Pasif")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>