@model IEnumerable<AlanyaBusinessGuide.Models.Review>

@{
    ViewData["Title"] = "Yorum Yönetimi";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Yorum Yönetimi</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Yorumlar</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Kullanıcı</th>
                            <th>İşletme</th>
                            <th>Yorum</th>
                            <th>Puan</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model)
                        {
                            <tr>
                                <td>@review.User?.FullName</td>
                                <td>@review.Business?.Name</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(review.Comment))
                                    {
                                        @(review.Comment.Length > 50 ? review.Comment.Substring(0, 50) + "..." : review.Comment)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Yorum yok</span>
                                    }
                                </td>
                                <td>
                                    <div class="text-warning">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                        <span class="ml-1">(@review.Rating)</span>
                                    </div>
                                </td>
                                <td>@review.CreatedDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (review.IsApproved)
                                    {
                                        <span class="badge badge-success">Onaylı</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Beklemede</span>
                                    }
                                    @if (!review.IsActive)
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    @if (!review.IsApproved)
                                    {
                                        <a href="@Url.Action("ApproveReview", new { id = review.Id })" 
                                           class="btn btn-sm btn-success">
                                            <i class="fas fa-check"></i> Onayla
                                        </a>
                                    }
                                    @if (review.IsApproved)
                                    {
                                        <a href="@Url.Action("RejectReview", new { id = review.Id })" 
                                           class="btn btn-sm btn-danger"
                                           onclick="return confirm('Bu yorumu reddetmek istediğinizden emin misiniz?')">
                                            <i class="fas fa-times"></i> Reddet
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
