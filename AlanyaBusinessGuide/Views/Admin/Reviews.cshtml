@model IEnumerable<AlanyaBusinessGuide.Models.Review>

@{
    ViewData["Title"] = "Yorum Yönetimi";
}

<div class="admin-reviews-page">
    <div class="container-fluid py-4">
        <div class="page-header mb-4">
            <h1 class="page-title">
                <i class="fas fa-comments me-2"></i>
                Yorum Yönetimi
            </h1>
            <p class="page-subtitle">Tüm kullanıcı yorumlarını görüntüleyin ve yönetin</p>
        </div>

        <div class="admin-card">
            <div class="card-header-custom">
                <h6 class="card-title-custom">
                    <i class="fas fa-list me-2"></i>
                    Yorumlar (@Model.Count())
                </h6>
            </div>
            <div class="card-body-custom">
                <div class="table-responsive">
                    <table class="table admin-table">
                        <thead>
                            <tr>
                                <th>Kullanıcı</th>
                                <th>İşletme</th>
                                <th>Yorum</th>
                                <th>Puan</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="user-info">
                                            <div class="user-avatar">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div class="user-details">
                                                <strong class="user-name">@(review.User?.DisplayName ?? review.User?.FullName ?? review.User?.UserName ?? "Bilinmiyor")</strong>
                                                @if (!string.IsNullOrEmpty(review.User?.Email))
                                                {
                                                    <small class="user-email">@review.User.Email</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <strong class="business-name">@(review.Business?.Name ?? "Bilinmiyor")</strong>
                                    </td>
                                    <td>
                                        <div class="comment-text">
                                            @if (!string.IsNullOrEmpty(review.Comment))
                                            {
                                                @(review.Comment.Length > 50 ? review.Comment.Substring(0, 50) + "..." : review.Comment)
                                            }
                                            else
                                            {
                                                <span style="color: #000000 !important;">Yorum yok</span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="rating-display">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= review.Rating)
                                                {
                                                    <i class="fas fa-star star-filled"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star star-empty"></i>
                                                }
                                            }
                                            <span class="rating-number">(@review.Rating)</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="date-text">@review.CreatedDate.ToString("dd.MM.yyyy")</span>
                                    </td>
                                    <td>
                                        @if (review.IsApproved)
                                        {
                                            <span class="badge-status badge-approved">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Onaylı
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge-status badge-pending">
                                                <i class="fas fa-clock me-1"></i>
                                                Beklemede
                                            </span>
                                        }
                                        @if (!review.IsActive)
                                        {
                                            <span class="badge-status badge-inactive">
                                                <i class="fas fa-ban me-1"></i>
                                                Pasif
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            @if (!review.IsApproved)
                                            {
                                                <a href="@Url.Action("ApproveReview", new { id = review.Id })" 
                                                   class="btn-action btn-approve"
                                                   title="Onayla">
                                                    <i class="fas fa-check"></i>
                                                </a>
                                            }
                                            @if (review.IsApproved)
                                            {
                                                <a href="@Url.Action("RejectReview", new { id = review.Id })" 
                                                   class="btn-action btn-reject"
                                                   title="Reddet"
                                                   onclick="return confirm('Bu yorumu reddetmek istediğinizden emin misiniz?')">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-reviews-page {
        min-height: 100vh;
        background: var(--bg-800);
        color: var(--text);
    }

    .page-header {
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

    .page-title i {
        color: #ffc107;
    }

    .page-subtitle {
        color: var(--muted);
        font-size: 1rem;
        margin: 0;
    }

    .admin-card {
        background: var(--panel);
        border-radius: 1rem;
        border: 1px solid var(--card-border);
        overflow: hidden;
    }

    .card-header-custom {
        background: rgba(255, 193, 7, 0.1);
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--card-border);
    }

    .card-title-custom {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text);
        margin: 0;
        display: flex;
        align-items: center;
    }

    .card-title-custom i {
        color: #ffc107;
    }

    .card-body-custom {
        padding: 1.5rem;
    }

    .admin-table {
        width: 100%;
        margin: 0;
        color: var(--text);
        border-collapse: separate;
        border-spacing: 0;
    }

    .admin-table thead th {
        background: rgba(255, 193, 7, 0.1);
        color: #000000 !important;
        font-weight: 600;
        padding: 1rem;
        border-bottom: 2px solid #e5e7eb;
        text-align: left;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .admin-table tbody tr {
        border-bottom: 1px solid #e5e7eb;
        transition: background-color 0.2s ease;
        background: #ffffff;
    }

    .admin-table tbody tr:hover {
        background: rgba(255, 193, 7, 0.1);
    }

    .admin-table tbody td {
        padding: 1.25rem 1rem;
        vertical-align: middle;
        color: #000000 !important;
    }

    .admin-table tbody td *:not(.star-filled):not(.star-empty):not(.badge-status):not(.badge-status *) {
        color: #000000 !important;
    }

    .admin-table tbody td strong,
    .admin-table tbody td span:not(.badge-status):not(.star-filled):not(.star-empty),
    .admin-table tbody td div,
    .admin-table tbody td small {
        color: #000000 !important;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #0b1220;
        font-weight: 600;
    }

    .user-details {
        display: flex;
        flex-direction: column;
    }

    .user-name {
        color: #000000 !important;
        font-size: 0.9375rem;
        font-weight: 600;
    }

    .user-email {
        color: #000000 !important;
        font-size: 0.8125rem;
    }

    .business-name {
        color: #000000 !important;
        font-size: 0.9375rem;
        font-weight: 600;
    }

    .comment-text {
        color: #000000 !important;
        font-size: 0.9375rem;
        line-height: 1.5;
        max-width: 300px;
    }

    .rating-display {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .star-filled {
        color: #ffc107;
        font-size: 0.875rem;
    }

    .star-empty {
        color: #9ca3af !important;
        font-size: 0.875rem;
    }

    .rating-number {
        color: #000000 !important;
        font-size: 0.8125rem;
        margin-left: 0.5rem;
    }

    .date-text {
        color: #000000 !important;
        font-size: 0.9375rem;
    }

    .badge-status {
        display: inline-flex;
        align-items: center;
        padding: 0.375rem 0.75rem;
        border-radius: 0.5rem;
        font-size: 0.8125rem;
        font-weight: 600;
        margin-right: 0.5rem;
    }

    .badge-approved {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
        border: 1px solid rgba(34, 197, 94, 0.3);
    }

    .badge-pending {
        background: rgba(255, 193, 7, 0.2);
        color: #ffc107;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .badge-inactive {
        background: rgba(239, 68, 68, 0.2);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-action {
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.875rem;
        border: none;
    }

    .btn-approve {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
    }

    .btn-approve:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(34, 197, 94, 0.4);
        color: white;
    }

    .btn-reject {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }

    .btn-reject:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        color: white;
    }

    @@media (max-width: 768px) {
        .admin-table {
            font-size: 0.875rem;
        }

        .admin-table thead th,
        .admin-table tbody td {
            padding: 0.75rem 0.5rem;
        }

        .user-info {
            flex-direction: column;
            align-items: flex-start;
        }

        .comment-text {
            max-width: 200px;
        }
    }
</style>
