@model AlanyaBusinessGuide.Models.Business

@{
    ViewData["Title"] = "İşletme Düzenle";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">İşletme Düzenle</h1>
        <a href="@Url.Action("Businesses")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">İşletme Bilgileri</h6>
        </div>
        <div class="card-body">
            <form asp-action="EditBusiness" method="post">
                <input asp-for="Id" type="hidden" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">İşletme Adı *</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Category" class="control-label">Kategori *</label>
                            <select asp-for="Category" class="form-control" required>
                                <option value="">Kategori Seçin</option>
                                <option value="Restoran">Restoran</option>
                                <option value="Otel">Otel</option>
                                <option value="Mağaza">Mağaza</option>
                                <option value="Spa & Wellness">Spa & Wellness</option>
                                <option value="Eğlence">Eğlence</option>
                                <option value="Sağlık">Sağlık</option>
                                <option value="Eğitim">Eğitim</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label">Adres *</label>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label">Telefon *</label>
                            <input asp-for="Phone" class="form-control" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">E-posta</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Website" class="control-label">Website</label>
                            <input asp-for="Website" class="form-control" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="WorkingHours" class="control-label">Çalışma Saatleri</label>
                            <input asp-for="WorkingHours" class="form-control" placeholder="Örn: 09:00-18:00" />
                            <span asp-validation-for="WorkingHours" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PriceRange" class="control-label">Fiyat Aralığı</label>
                            <select asp-for="PriceRange" class="form-control">
                                <option value="">Fiyat Aralığı Seçin</option>
                                <option value="₺">₺ (Ekonomik)</option>
                                <option value="₺₺">₺₺ (Orta)</option>
                                <option value="₺₺₺">₺₺₺ (Pahalı)</option>
                                <option value="₺₺₺₺">₺₺₺₺ (Çok Pahalı)</option>
                            </select>
                            <span asp-validation-for="PriceRange" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Resim URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Aktif</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check">
                            <input asp-for="IsFeatured" class="form-check-input" />
                            <label asp-for="IsFeatured" class="form-check-label">Öne Çıkan</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check">
                            <input asp-for="IsApproved" class="form-check-input" />
                            <label asp-for="IsApproved" class="form-check-label">Onaylı</label>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                    <a href="@Url.Action("Businesses")" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
