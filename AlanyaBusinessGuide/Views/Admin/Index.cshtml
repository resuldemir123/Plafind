@{
    ViewData["Title"] = "Admin Dashboard";
    var stats = ViewBag.Stats as dynamic;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4">Admin Dashboard</h1>
        </div>
    </div>

    <!-- İstatistikler -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam İşletme</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalBusinesses</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Aktif İşletme</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.ActiveBusinesses</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Bekleyen Onay</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.PendingApprovals</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Toplam Kullanıcı</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalUsers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Hızlı Erişim</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Businesses")" class="list-group-item list-group-item-action">
                            <i class="fas fa-building mr-2"></i>İşletmeleri Yönet
                        </a>
                        <a href="@Url.Action("CreateBusiness")" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus mr-2"></i>Yeni İşletme Ekle
                        </a>
                        <a href="@Url.Action("Users")" class="list-group-item list-group-item-action">
                            <i class="fas fa-users mr-2"></i>Kullanıcıları Yönet
                        </a>
                        <a href="@Url.Action("Reviews")" class="list-group-item list-group-item-action">
                            <i class="fas fa-comments mr-2"></i>Yorumları Yönet
                        </a>
                        <a href="@Url.Action("Favorites")" class="list-group-item list-group-item-action">
                            <i class="fas fa-heart mr-2"></i>Favorileri Yönet
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Son Kullanıcı Aktivitesi</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentActivities != null)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var activity in ViewBag.RecentActivities as List<AlanyaBusinessGuide.Models.Review>)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@activity.User?.FullName</h6>
                                        <small>@activity.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-1">@activity.Business?.Name için yorum yaptı</p>
                                    <small class="text-muted">Puan: @activity.Rating/5</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Henüz aktivite yok.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Son Favoriler -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Son Favoriler</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentFavorites != null)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var favorite in ViewBag.RecentFavorites as List<AlanyaBusinessGuide.Models.UserFavorite>)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@favorite.User?.FullName</h6>
                                        <small>@favorite.AddedDate.ToString("dd.MM.yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-1">@favorite.Business?.Name'i favorilere ekledi</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Henüz favori yok.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Sistem Durumu</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="text-center">
                                <div class="h4 text-success">@ViewBag.Stats.ActiveBusinesses</div>
                                <div class="text-muted">Aktif İşletme</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <div class="h4 text-warning">@ViewBag.Stats.PendingApprovals</div>
                                <div class="text-muted">Bekleyen Onay</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>