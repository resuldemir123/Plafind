@model IEnumerable<AlanyaBusinessGuide.Models.Review>

@{
    ViewData["Title"] = "Yorumlar";
    var businessId = ViewBag.BusinessId as int?;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Search", "Home")">İşletmeler</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Details", "Businesses", new { id = businessId })">İşletme Detay</a></li>
            <li class="breadcrumb-item active">Yorumlar</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold text-dark">
                        <i class="fas fa-comments text-primary me-2"></i>
                        Yorumlar
                    </h1>
                    <p class="text-muted">Tüm kullanıcı yorumları ve değerlendirmeleri</p>
                </div>
                <a asp-action="Create" asp-route-businessId="@businessId" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Yeni Yorum Ekle
                </a>
            </div>
        </div>
    </div>

    <!-- Reviews Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <i class="fas fa-user me-2"></i>
                                Kullanıcı
                            </th>
                            <th>
                                <i class="fas fa-comment me-2"></i>
                                Yorum
                            </th>
                            <th>
                                <i class="fas fa-star me-2"></i>
                                Puan
                            </th>
                            <th>
                                <i class="fas fa-calendar me-2"></i>
                                Tarih
                            </th>
                            <th>
                                <i class="fas fa-cog me-2"></i>
                                İşlemler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                                                 style="width: 40px; height: 40px;">
                                                <i class="fas fa-user text-white"></i>
                                            </div>
                                            <div>
                                                <strong>@(item.User?.FullName ?? "Anonim Kullanıcı")</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Comment))
                                        {
                                            <p class="mb-0 text-muted">
                                                @(item.Comment.Length > 100 ? item.Comment.Substring(0, 100) + "..." : item.Comment)
                                            </p>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Yorum yok</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="fw-bold text-warning me-2">@item.Rating</span>
                                            <div class="rating-stars">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    @if (i <= item.Rating)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-warning"></i>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-muted">@item.CreatedDate.ToString("dd MMMM yyyy HH:mm")</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"
                                               onclick="return confirm('Bu yorumu silmek istediğinizden emin misiniz?');">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="fas fa-comment-slash fa-3x mb-3"></i>
                                        <h5>Henüz yorum bulunmuyor</h5>
                                        <p>İlk yorumu siz yapın!</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a href="@Url.Action("Details", "Businesses", new { id = businessId })" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>İşletme Detayına Dön
        </a>
    </div>
</div>

<style>
    .table > :not(caption) > * > * {
        padding: 1rem 0.5rem;
    }

    .rating-stars {
        font-size: 0.9rem;
    }

    .card {
        border-radius: 12px;
    }

    .btn {
        border-radius: 8px;
    }
</style>