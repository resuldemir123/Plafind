@model AlanyaBusinessGuide.Models.Reservation
@{
    ViewData["Title"] = "Rezervasyon Detay";
    var business = Model?.Business;
    // Hata: 'Business' bir 'Media' tanýmý içermiyor.
    // Çözüm: business nesnesinin Media özelliði yoksa, bu satýrý kaldýrýn veya doðru iliþkiyi kullanýn.
    // Eðer media bilgisi gerekiyorsa, business ile iliþkili media'ya eriþim için uygun property'yi kullanmalýsýnýz.
    // Örneðin, business.Media yerine business.MediaList veya business.MediaCollection gibi bir property olabilir.
    // Eðer böyle bir property yoksa, media ile ilgili kodu kaldýrýn.
    // Aþaðýda, media ile ilgili kod kaldýrýldý.
}

<h2>@ViewData["Title"]</h2>

@if (Model == null)
{
    <div class="alert alert-warning">Rezervasyon bulunamadý.</div>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                @foreach (var prop in Model.GetType().GetProperties(
                            System.Reflection.BindingFlags.Public |
                            System.Reflection.BindingFlags.Instance))
                {
                    var value = prop.GetValue(Model);
                    if (value != null)
                    {
                        <dt class="col-sm-3">@prop.Name</dt>
                        <dd class="col-sm-9">@value</dd>
                    }
                }
            </dl>

            @if (business != null)
            {
                <h5>Ýþletme: @business.Name</h5>
                <!-- media ile ilgili kod kaldýrýldý -->
            }

            <a asp-action="Index" class="btn btn-secondary">Geri</a>
        </div>
    </div>
}

<style>
    .card {
        background: #ffffff;
        border: 1px solid #dddddd;
        border-radius: 8px;
        padding: 1rem;
    }

    .card-body {
        padding: 1.5rem;
    }
</style>