@model IEnumerable<AlanyaBusinessGuide.Models.Business>

@{
    ViewData["Title"] = "İşletmeler";
}

<h2>İşletme Listesi</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Resim</th>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name - İşletme Resmi" style="width: 100px; height: 100px; object-fit: cover;" class="img-fluid" onerror="this.src='/images/default.jpg'; this.alt='Varsayılan Resim';" />
                    }
                    else
                    {
                        <img src="/images/default.jpg" alt="@item.Name - Varsayılan Resim" style="width: 100px; height: 100px; object-fit: cover;" class="img-fluid" />
                    }
                </td>
                <td>@item.Name</td>
                <td>@(string.IsNullOrEmpty(item.Description) ? "Açıklama Yok" : item.Description)</td>
                <td>@(item.IsActive ? "Aktif" : "Pasif") @(item.IsFeatured ? " - Öne Çıkarılmış" : "")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm ms-1">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>