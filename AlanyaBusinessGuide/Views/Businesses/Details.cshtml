@model AlanyaBusinessGuide.Models.Business
@{
    ViewData["Title"] = Model.Name + " - İşletme Detayları";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Search">İşletmeler</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Business Header -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h1 class="display-6 fw-bold mb-2">@Model.Name</h1>
                            @if (Model.IsFeatured)
                            {
                                <span class="badge bg-warning text-dark mb-2">
                                    <i class="fas fa-star me-1"></i>Öne Çıkan İşletme
                                </span>
                            }
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <button class="btn btn-outline-danger btn-lg" title="Favorilere Ekle">
                                <i class="far fa-heart"></i>
                            </button>
                        }
                    </div>

                    <!-- Rating -->
                    <div class="mb-3">
                        <div class="d-flex align-items-center">
                            <span class="display-6 fw-bold text-warning me-3">@Model.AverageRating.ToString("F1")</span>
                            <div>
                                <div class="d-flex mb-1">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        @if (i <= Math.Round(Model.AverageRating))
                                        {
                                            <i class="fas fa-star text-warning fs-4"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-warning fs-4"></i>
                                        }
                                    }
                                </div>
                                <p class="mb-0 text-muted">@Model.TotalReviews değerlendirme</p>
                            </div>
                        </div>
                    </div>

                    <!-- Category & Price -->
                    <div class="mb-3">
                        <span class="badge bg-primary fs-6 me-2">
                            <i class="fas fa-tag me-1"></i>@(Model.Category?.Name ?? "Kategori Yok")
                        </span>
                        @if (!string.IsNullOrEmpty(Model.PriceRange))
                        {
                            <span class="badge bg-success fs-6">
                                <i class="fas fa-dollar-sign me-1"></i>@Model.PriceRange
                            </span>
                        }
                    </div>

                    <!-- Quick Actions -->
                    <div class="d-flex gap-2 flex-wrap">
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <a href="tel:@Model.Phone" class="btn btn-success">
                                <i class="fas fa-phone me-2"></i>Ara
                            </a>
                        }
                        @* Harici linkler (website, paylaşım, yol tarifi) şimdilik devre dışı *@
                    </div>
                </div>
            </div>

            <!-- Business Image -->
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="card shadow-sm border-0 mb-4 overflow-hidden">
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name"
                         style="max-height: 500px; object-fit: cover; width: 100%;">
                </div>
            }
            else
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="bg-gradient-primary d-flex align-items-center justify-content-center"
                         style="height: 400px;">
                        <div class="text-center text-white">
                            <i class="fas fa-building fa-5x opacity-50 mb-3"></i>
                            <p class="fs-5">Resim mevcut değil</p>
                        </div>
                    </div>
                </div>
            }

            <!-- Description -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <h3 class="fw-bold mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>Hakkında
                        </h3>
                        <p class="lead text-muted">@Model.Description</p>
                    </div>
                </div>
            }

            <!-- Working Hours -->
            @if (!string.IsNullOrEmpty(Model.WorkingHours))
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <h3 class="fw-bold mb-3">
                            <i class="fas fa-clock text-primary me-2"></i>Çalışma Saatleri
                        </h3>
                        <p class="fs-5 text-muted mb-0">@Model.WorkingHours</p>
                    </div>
                </div>
            }

            <!-- Reviews Section -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <h3 class="fw-bold mb-4">
                        <i class="fas fa-comments text-primary me-2"></i>
                        Yorumlar (@Model.TotalReviews)
                    </h3>

                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedDate).Take(5))
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="fw-bold mb-1">
                                            <i class="fas fa-user-circle text-primary me-2"></i>
                                            @(review.User?.UserName ?? "Anonim Kullanıcı")
                                        </h6>
                                        <div class="mb-1">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                @if (i <= review.Rating)
                                                {
                                                    <i class="fas fa-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star text-warning"></i>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <small class="text-muted">@review.CreatedDate.ToString("dd MMMM yyyy")</small>
                                </div>
                                @if (!string.IsNullOrEmpty(review.Comment))
                                {
                                    <p class="mb-0 text-muted">@review.Comment</p>
                                }
                            </div>
                        }

                        @if (Model.TotalReviews > 5)
                        {
                            <div class="text-center mt-3">
                                <button class="btn btn-outline-primary">
                                    Tüm Yorumları Gör (@Model.TotalReviews)
                                </button>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-comment-slash fa-3x text-muted mb-3"></i>
                            <p class="text-muted fs-5">Henüz yorum yapılmamış.</p>
                            <p class="text-muted">İlk yorumu siz yapın!</p>
                        </div>
                    }

                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                    {
                        <div class="mt-4">
                            <button class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-pen me-2"></i>Yorum Yap ve Puanla
                            </button>
                        </div>
                    }
                    else if (!User.Identity.IsAuthenticated)
                    {
                        <div class="alert alert-info mt-4">
                            <i class="fas fa-info-circle me-2"></i>
                            Yorum yapabilmek için <a asp-area="Identity" asp-page="/Account/Login" class="alert-link">giriş yapmalısınız</a>.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Contact Info Card -->
            <div class="card shadow-sm border-0 mb-4 sticky-top" style="top: 20px;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">
                        <i class="fas fa-address-card text-primary me-2"></i>İletişim Bilgileri
                    </h5>

                    <!-- Address -->
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="mb-3 pb-3 border-bottom">
                            <h6 class="fw-semibold mb-2">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>Adres
                            </h6>
                            <p class="mb-0 text-muted">@Model.Address</p>
                            @* Harita bağlantısı şimdilik devre dışı *@
                        </div>
                    }

                    <!-- Phone -->
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <div class="mb-3 pb-3 border-bottom">
                            <h6 class="fw-semibold mb-2">
                                <i class="fas fa-phone text-success me-2"></i>Telefon
                            </h6>
                            <a href="tel:@Model.Phone" class="btn btn-success w-100">
                                <i class="fas fa-phone me-2"></i>@Model.Phone
                            </a>
                        </div>
                    }

                    <!-- Email -->
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <div class="mb-3 pb-3 border-bottom">
                            <h6 class="fw-semibold mb-2">
                                <i class="fas fa-envelope text-warning me-2"></i>E-posta
                            </h6>
                            <a href="mailto:@Model.Email" class="text-decoration-none d-block">
                                @Model.Email
                            </a>
                        </div>
                    }

                    <!-- Website -->
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <div class="mb-3 pb-3 border-bottom">
                            <h6 class="fw-semibold mb-2">
                                <i class="fas fa-globe text-info me-2"></i>Website
                            </h6>
                            <a href="@Model.Website" target="_blank" class="btn btn-info text-white w-100">
                                <i class="fas fa-external-link-alt me-2"></i>Websiteyi Ziyaret Et
                            </a>
                        </div>
                    }

                    <!-- Working Hours -->
                    @if (!string.IsNullOrEmpty(Model.WorkingHours))
                    {
                        <div class="mb-3">
                            <h6 class="fw-semibold mb-2">
                                <i class="fas fa-clock text-primary me-2"></i>Çalışma Saatleri
                            </h6>
                            <p class="mb-0 text-muted">@Model.WorkingHours</p>
                        </div>
                    }

                    <!-- Admin Actions -->
                    @if (User.IsInRole("Admin"))
                    {
                        <hr class="my-4">
                        <h6 class="fw-bold mb-3 text-danger">
                            <i class="fas fa-user-shield me-2"></i>Admin İşlemleri
                        </h6>
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Düzenle
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
                               onclick="return confirm('Bu işletmeyi silmek istediğinizden emin misiniz?');">
                                <i class="fas fa-trash me-2"></i>Sil
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Share Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-share-alt text-primary me-2"></i>Paylaş
                    </h5>
                    <div class="d-flex gap-2 flex-wrap">
                        <button class="btn btn-primary btn-sm">
                            <i class="fab fa-facebook"></i>
                        </button>
                        <button class="btn btn-info btn-sm text-white">
                            <i class="fab fa-twitter"></i>
                        </button>
                        <button class="btn btn-success btn-sm">
                            <i class="fab fa-whatsapp"></i>
                        </button>
                        <button class="btn btn-secondary btn-sm">
                            <i class="fas fa-link"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Back Button -->
            <a asp-controller="Home" asp-action="Search" class="btn btn-outline-secondary w-100 btn-lg">
                <i class="fas fa-arrow-left me-2"></i>İşletmelere Geri Dön
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .sticky-top {
        position: sticky;
        top: 20px;
        z-index: 1020;
    }

    .btn {
        border-radius: 8px;
    }

    .card-body h3 {
        font-size: 1.5rem;
    }

    @@media (max-width: 991px) {
        .sticky-top {
            position: relative;
            top: 0;
        }
    }
</style>