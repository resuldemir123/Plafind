@model Plafind.Models.News
@{
    ViewData["Title"] = "Yeni Haber Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white py-4">
                    <h2 class="mb-0 fw-bold">
                        <i class="bi bi-plus-circle-fill me-2"></i>Yeni Haber Ekle
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">
                        <small>Yeni bir haber makalesi oluşturun ve yayınlayın</small>
                    </p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold">
                                <i class="bi bi-card-heading text-primary me-1"></i>
                                Başlık <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title"
                                   class="form-control form-control-lg"
                                   placeholder="Haber başlığını girin..."
                                   maxlength="200" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Dikkat çekici ve açıklayıcı bir başlık kullanın
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-semibold">
                                <i class="bi bi-text-paragraph text-primary me-1"></i>
                                İçerik <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Content"
                                      class="form-control"
                                      rows="12"
                                      placeholder="Haber içeriğini buraya yazın..."
                                      style="resize: vertical;"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Detaylı ve bilgilendirici bir içerik oluşturun
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageUrl" class="form-label fw-semibold">
                                <i class="bi bi-image text-primary me-1"></i>
                                Resim URL'si
                            </label>
                            <input asp-for="ImageUrl"
                                   class="form-control"
                                   placeholder="https://ornek.com/resim.jpg"
                                   type="url" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Haberin görselini temsil eden bir resim URL'si girin (isteğe bağlı)
                            </div>
                        </div>

                        <div class="alert alert-light border d-flex align-items-start" role="alert">
                            <i class="bi bi-lightbulb-fill text-warning me-3 fs-5"></i>
                            <div>
                                <strong>İpucu:</strong> Haberin kalitesini artırmak için açık ve net bir dil kullanın.
                                Önemli bilgileri vurgulayın ve okuyucuya değer katın.
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-check-circle me-2"></i>Haberi Yayınla
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 text-center text-muted">
                <small>
                    <i class="bi bi-shield-check me-1"></i>
                    Haber otomatik olarak adınıza kaydedilecektir
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Form gönderilirken buton devre dışı bırak
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Kaydediliyor...';
        });

        // Karakter sayacı ekle
        const titleInput = document.querySelector('input[name="Title"]');
        const contentTextarea = document.querySelector('textarea[name="Content"]');

        if (titleInput) {
            const titleCounter = document.createElement('small');
            titleCounter.className = 'text-muted float-end';
            titleInput.parentElement.querySelector('.form-text').appendChild(titleCounter);

            titleInput.addEventListener('input', function() {
                titleCounter.textContent = `${this.value.length}/200 karakter`;
            });
        }

        if (contentTextarea) {
            const contentCounter = document.createElement('small');
            contentCounter.className = 'text-muted float-end';
            contentTextarea.parentElement.querySelector('.form-text').appendChild(contentCounter);

            contentTextarea.addEventListener('input', function() {
                contentCounter.textContent = `${this.value.length} karakter`;
            });
        }
    </script>

    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-bottom: none;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

        .btn-lg {
            padding: 0.75rem 2rem;
            font-weight: 600;
        }

        textarea.form-control {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        .alert-light {
            background-color: #f8f9fa;
        }
    </style>
}