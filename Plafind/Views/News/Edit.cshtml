@model Plafind.Models.News
@{
    ViewData["Title"] = "Haber Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark py-4">
                    <h2 class="mb-0 fw-bold">
                        <i class="bi bi-pencil-square me-2"></i>Haber Düzenle
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">
                        <small>Haber içeriğini güncelleyin</small>
                    </p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="PublishDate" />
                        <input type="hidden" asp-for="AuthorId" />
                        <input type="hidden" asp-for="ViewCount" />

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold">
                                <i class="bi bi-card-heading text-warning me-1"></i>
                                Başlık <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title"
                                   class="form-control form-control-lg"
                                   placeholder="Haber başlığını girin..."
                                   maxlength="200" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Dikkat çekici ve açıklayıcı bir başlık kullanın
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-semibold">
                                <i class="bi bi-text-paragraph text-warning me-1"></i>
                                İçerik <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Content"
                                      class="form-control"
                                      rows="12"
                                      placeholder="Haber içeriğini buraya yazın..."
                                      style="resize: vertical;"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Detaylı ve bilgilendirici bir içerik oluşturun
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageUrl" class="form-label fw-semibold">
                                <i class="bi bi-image text-warning me-1"></i>
                                Resim URL'si
                            </label>
                            <input asp-for="ImageUrl"
                                   class="form-control"
                                   placeholder="https://ornek.com/resim.jpg"
                                   type="url" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Haberin görselini temsil eden bir resim URL'si girin (isteğe bağlı)
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mt-3">
                                    <label class="form-label small text-muted">Mevcut Resim:</label>
                                    <div class="border rounded p-2">
                                        <img src="@Model.ImageUrl" alt="Mevcut resim" class="img-fluid" style="max-height: 150px;">
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="alert alert-warning border d-flex align-items-start" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-3 fs-5"></i>
                            <div>
                                <strong>Dikkat:</strong> Yaptığınız değişiklikler kaydedildiğinde,
                                haberin orijinal yayın tarihi ve yazar bilgisi korunacaktır.
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg shadow-sm">
                                <i class="bi bi-check-circle me-2"></i>Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4 text-center">
                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">
                        <i class="bi bi-eye me-1"></i>Haberi Görüntüle
                    </a>
                    <span class="text-muted">|</span>
                    <a asp-action="Delete" asp-route-id="@Model.Id"
                       class="text-danger text-decoration-none"
                       onclick="return confirm('Bu haberi silmek istediğinizden emin misiniz?');">
                        <i class="bi bi-trash me-1"></i>Haberi Sil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Form gönderilirken buton devre dışı bırak
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Kaydediliyor...';
        });

        // Karakter sayacı ekle
        const titleInput = document.querySelector('input[name="Title"]');
        const contentTextarea = document.querySelector('textarea[name="Content"]');

        if (titleInput) {
            const titleCounter = document.createElement('small');
            titleCounter.className = 'text-muted float-end';
            const titleFormText = titleInput.parentElement.querySelector('.form-text');
            if (titleFormText) {
                titleFormText.appendChild(titleCounter);

                titleInput.addEventListener('input', function() {
                    titleCounter.textContent = `${this.value.length}/200 karakter`;
                });

                // İlk yüklemede sayacı güncelle
                titleCounter.textContent = `${titleInput.value.length}/200 karakter`;
            }
        }

        if (contentTextarea) {
            const contentCounter = document.createElement('small');
            contentCounter.className = 'text-muted float-end';
            const contentFormText = contentTextarea.parentElement.querySelector('.form-text');
            if (contentFormText) {
                contentFormText.appendChild(contentCounter);

                contentTextarea.addEventListener('input', function() {
                    contentCounter.textContent = `${this.value.length} karakter`;
                });

                // İlk yüklemede sayacı güncelle
                contentCounter.textContent = `${contentTextarea.value.length} karakter`;
            }
        }

        // Resim URL önizlemesi
        const imageUrlInput = document.querySelector('input[name="ImageUrl"]');
        if (imageUrlInput) {
            imageUrlInput.addEventListener('blur', function() {
                if (this.value) {
                    // Basit URL formatı kontrolü
                    try {
                        new URL(this.value);
                    } catch (e) {
                        alert('Lütfen geçerli bir URL girin (örn: https://ornek.com/resim.jpg)');
                    }
                }
            });
        }
    </script>

    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-bottom: none;
        }

        .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
        }

        .btn-lg {
            padding: 0.75rem 2rem;
            font-weight: 600;
        }

        textarea.form-control {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffc107;
        }
    </style>
}