@model IEnumerable<Plafind.Models.ApplicationUser>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kullanıcı Yönetimi</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kullanıcılar</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Telefon</th>
                            <th>Kayıt Tarihi</th>
                            <th>Durum</th>
                            <th>Favori Sayısı</th>
                            <th>Yorum Sayısı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.PhoneNumber</td>
                                <td>@user.CreatedDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }
                                </td>
                                <td>@user.Favorites.Count</td>
                                <td>@user.Reviews.Count</td>
                                <td>
                                    <a href="@Url.Action("UserDetails", new { id = user.Id })" 
                                       class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Detaylar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
