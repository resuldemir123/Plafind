@model Plafind.Models.Business

@{
    ViewData["Title"] = "Yeni İşletme Ekle";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Yeni İşletme Ekle</h1>
        <a href="@Url.Action("Businesses")" class="btn btn-secondary btn-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Geri Dön
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">İşletme Bilgileri</h6>
        </div>
        <div class="card-body">
            <form asp-action="CreateBusiness" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">İşletme Adı *</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Category" class="control-label">Kategori *</label>
                            <select asp-for="Category" class="form-control" required>
                                <option value="">Kategori Seçin</option>
                                <option value="Restoran">Restoran</option>
                                <option value="Otel">Otel</option>
                                <option value="Mağaza">Mağaza</option>
                                <option value="Spa & Wellness">Spa & Wellness</option>
                                <option value="Eğlence">Eğlence</option>
                                <option value="Sağlık">Sağlık</option>
                                <option value="Eğitim">Eğitim</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label">Adres *</label>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label">Telefon *</label>
                            <input asp-for="Phone" class="form-control" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">E-posta</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Website" class="control-label">Website</label>
                            <input asp-for="Website" class="form-control" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="WorkingHours" class="control-label">Çalışma Saatleri</label>
                            <input asp-for="WorkingHours" class="form-control" placeholder="Örn: 09:00-18:00" />
                            <span asp-validation-for="WorkingHours" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PriceRange" class="control-label">Fiyat Aralığı</label>
                            <select asp-for="PriceRange" class="form-control">
                                <option value="">Fiyat Aralığı Seçin</option>
                                <option value="₺">₺ (Ekonomik)</option>
                                <option value="₺₺">₺₺ (Orta)</option>
                                <option value="₺₺₺">₺₺₺ (Pahalı)</option>
                                <option value="₺₺₺₺">₺₺₺₺ (Çok Pahalı)</option>
                            </select>
                            <span asp-validation-for="PriceRange" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Latitude" class="control-label">Konum (Enlem)</label>
                            <input asp-for="Latitude" class="form-control" type="number" step="any" placeholder="36.5432" />
                            <span asp-validation-for="Latitude" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Longitude" class="control-label">Konum (Boylam)</label>
                            <input asp-for="Longitude" class="form-control" type="number" step="any" placeholder="31.9991" />
                            <span asp-validation-for="Longitude" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
                            <div>
                                <h5 class="mb-1">Haritadan Konum Seç</h5>
                                <small class="text-muted">Mahalle, sokak veya önemli bir noktayı arayabilir, haritaya tıklayarak işaret bırakabilirsiniz.</small>
                            </div>
                            <div class="map-search d-flex gap-2">
                                <input type="text" id="mapSearchInput" class="form-control" placeholder="Mahalle / Cadde / Yer adı" />
                                <button type="button" id="mapSearchBtn" class="btn btn-outline-secondary">Ara</button>
                            </div>
                        </div>
                        <div id="businessFormMap" class="map-picker-canvas mb-2"></div>
                        <small id="mapStatusText" class="map-status-text text-muted d-block">
                            Haritaya tıklayarak işaret koyduğunuzda enlem ve boylam değerleri otomatik güncellenecektir.
                        </small>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label">Resim URL</label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Aktif</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check">
                            <input asp-for="IsFeatured" class="form-check-input" />
                            <label asp-for="IsFeatured" class="form-check-label">Öne Çıkan</label>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a href="@Url.Action("Businesses")" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .map-picker-canvas {
        width: 100%;
        height: 320px;
        border-radius: 1rem;
        border: 1px solid rgba(0,0,0,0.1);
    }

    .map-search {
        min-width: 320px;
    }

    @@media (max-width: 576px) {
        .map-search {
            flex-direction: column;
            width: 100%;
        }
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        window.initBusinessLocationPicker = function () {
            const apiKey = '@(ViewBag.GoogleMapsApiKey as string ?? "")';
            
            // MapsService ile harita yükle
            if (window.MapsService && apiKey) {
                window.MapsService.init(apiKey);
            }
            
            if (window.LocationPicker) {
                LocationPicker.init({
                    mapElementId: 'businessFormMap',
                    latInputId: 'Latitude',
                    lngInputId: 'Longitude',
                    addressInputId: 'Address',
                    searchInputId: 'mapSearchInput',
                    searchButtonId: 'mapSearchBtn',
                    statusElementId: 'mapStatusText',
                    apiKey: apiKey
                });
            }
        };
        
        // Google Maps yüklenmezse fallback kullan
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                if (!window.google || !window.google.maps) {
                    const apiKey = '@(ViewBag.GoogleMapsApiKey as string ?? "")';
                    if (!apiKey && window.MapsService) {
                        window.MapsService.enableFallback();
                        if (window.LocationPicker) {
                            LocationPicker.init({
                                mapElementId: 'businessFormMap',
                                latInputId: 'Latitude',
                                lngInputId: 'Longitude',
                                addressInputId: 'Address',
                                searchInputId: 'mapSearchInput',
                                searchButtonId: 'mapSearchBtn',
                                statusElementId: 'mapStatusText'
                            });
                        }
                    }
                }
            }, 5000);
        });
    </script>
    @if (!string.IsNullOrEmpty(ViewBag.GoogleMapsApiKey as string))
    {
        <script>
            // MapsService callback
            window.mapsServiceCallback = function() {
                if (window.initBusinessLocationPicker) {
                    window.initBusinessLocationPicker();
                }
            };
        </script>
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=@ViewBag.GoogleMapsApiKey&libraries=places&callback=mapsServiceCallback"></script>
    }
    else
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // OpenStreetMap fallback kullan
                if (window.MapsService) {
                    window.MapsService.enableFallback();
                }
                if (window.LocationPicker) {
                    LocationPicker.init({
                        mapElementId: 'businessFormMap',
                        latInputId: 'Latitude',
                        lngInputId: 'Longitude',
                        addressInputId: 'Address',
                        searchInputId: 'mapSearchInput',
                        searchButtonId: 'mapSearchBtn',
                        statusElementId: 'mapStatusText'
                    });
                }
            });
        </script>
    }
}
