@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "_Layout";
}

<div class="auth-page-wrapper">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-icon-wrapper">
                    <i class="fas fa-key"></i>
                </div>
                <h1 class="auth-title">Şifremi Unuttum</h1>
                <p class="auth-subtitle">Telefon numaranıza SMS ile şifre sıfırlama kodu göndereceğiz</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success-custom mt-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger-custom mt-4" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <div>
                        @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                    </div>
                </div>
            }

            <form asp-action="ForgotPassword" method="post" id="forgotPasswordForm" class="auth-form">
                @Html.AntiForgeryToken()
                
                <div class="form-group-custom">
                    <label asp-for="PhoneNumber" class="form-label-custom">
                        <i class="fas fa-phone me-2"></i>
                        Telefon Numarası
                    </label>
                    <div class="input-wrapper">
                        <input asp-for="PhoneNumber" 
                               type="tel" 
                               class="form-input-custom" 
                               placeholder="+90 5XX XXX XX XX"
                               autocomplete="tel"
                               id="phoneInput"
                               required />
                        <i class="input-icon fas fa-phone"></i>
                    </div>
                    <span asp-validation-for="PhoneNumber" class="error-message"></span>
                    <small class="form-help-text">
                        <i class="fas fa-info-circle me-1"></i>
                        Kayıtlı telefon numaranızı girin. SMS ile 6 haneli kod gönderilecektir.
                    </small>
                </div>

                <div class="form-group-custom">
                    <button type="submit" class="btn-submit" id="submitBtn">
                        <span class="btn-text">
                            <i class="fas fa-paper-plane me-2"></i>
                            Kod Gönder
                        </span>
                        <span class="btn-loader" style="display: none;">
                            <i class="fas fa-spinner fa-spin me-2"></i>
                            Gönderiliyor...
                        </span>
                    </button>
                </div>
            </form>

            <div class="auth-footer">
                <p class="footer-text">
                    <a asp-controller="Account" asp-action="Login" class="link-primary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Giriş Sayfasına Dön
                    </a>
                </p>
            </div>
        </div>

        <div class="auth-features">
            <div class="feature-item">
                <i class="fas fa-shield-alt"></i>
                <h3>Güvenli İşlem</h3>
                <p>Kodunuz sadece size gönderilir</p>
            </div>
            <div class="feature-item">
                <i class="fas fa-clock"></i>
                <h3>Hızlı Çözüm</h3>
                <p>Kodunuz 1-2 dakika içinde gelir</p>
            </div>
            <div class="feature-item">
                <i class="fas fa-lock"></i>
                <h3>Geçici Kod</h3>
                <p>Kodunuz 10 dakika geçerlidir</p>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-page-wrapper {
        min-height: 100vh;
        background: linear-gradient(135deg, #0b1220 0%, #1e293b 50%, #0b1220 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        position: relative;
        overflow: hidden;
    }

    .auth-page-wrapper::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 30%, rgba(255, 193, 7, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
        animation: backgroundPulse 15s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes backgroundPulse {
        0%, 100% { opacity: 0.5; }
        50% { opacity: 0.8; }
    }

    .auth-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        max-width: 1200px;
        width: 100%;
        position: relative;
        z-index: 1;
    }

    .auth-card {
        background: var(--panel);
        border-radius: 1.5rem;
        padding: 3rem;
        border: 1px solid var(--card-border);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        animation: slideInUp 0.6s ease-out;
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

    .auth-icon-wrapper {
        width: 90px;
        height: 90px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 30px rgba(59, 130, 246, 0.4);
        animation: iconPulse 2s ease-in-out infinite;
    }

    @@keyframes iconPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .auth-icon-wrapper i {
        font-size: 2.5rem;
        color: white;
    }

    .auth-title {
        font-size: 2rem;
        font-weight: 800;
        color: var(--text);
        margin-bottom: 0.5rem;
        letter-spacing: -0.5px;
    }

    .auth-subtitle {
        color: var(--muted);
        font-size: 1rem;
        margin: 0;
    }

    .alert-success-custom {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        border-left: 4px solid #22c55e;
        color: #d1fae5;
        padding: 1rem 1.25rem;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .alert-success-custom i {
        color: #22c55e;
        font-size: 1.25rem;
    }

    .alert-danger-custom {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-left: 4px solid #ef4444;
        color: #fee2e2;
        padding: 1rem 1.25rem;
        border-radius: 0.75rem;
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
    }

    .alert-danger-custom i {
        color: #ef4444;
        font-size: 1.25rem;
        margin-top: 0.125rem;
    }

    .alert-danger-custom ul {
        margin: 0;
        padding-left: 1.25rem;
        list-style: none;
    }

    .alert-danger-custom li {
        margin: 0.25rem 0;
    }

    .auth-form {
        margin-top: 2rem;
    }

    .form-group-custom {
        margin-bottom: 1.5rem;
    }

    .form-label-custom {
        display: flex;
        align-items: center;
        color: var(--text);
        font-weight: 600;
        font-size: 0.9375rem;
        margin-bottom: 0.75rem;
    }

    .form-label-custom i {
        color: #3b82f6;
    }

    .input-wrapper {
        position: relative;
    }

    .form-input-custom {
        width: 100%;
        padding: 1rem 3rem 1rem 3rem;
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid var(--card-border);
        border-radius: 0.75rem;
        color: var(--text);
        font-size: 1rem;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

    .form-input-custom::placeholder {
        color: var(--muted);
    }

    .form-input-custom:focus {
        outline: none;
        border-color: #3b82f6;
        background: rgba(255, 255, 255, 0.08);
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--muted);
        pointer-events: none;
        transition: color 0.3s ease;
    }

    .form-input-custom:focus + .input-icon,
    .form-input-custom:not(:placeholder-shown) + .input-icon {
        color: #3b82f6;
    }

    .form-help-text {
        display: block;
        color: var(--muted);
        font-size: 0.8125rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
    }

    .error-message {
        display: block;
        color: #ef4444;
        font-size: 0.875rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .error-message::before {
        content: '⚠';
        font-size: 0.875rem;
    }

    .btn-submit {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border: none;
        border-radius: 0.75rem;
        color: white;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-submit:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(59, 130, 246, 0.5);
    }

    .btn-submit:active:not(:disabled) {
        transform: translateY(0);
    }

    .btn-submit:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .auth-footer {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid var(--card-border);
    }

    .footer-text {
        color: var(--muted);
        font-size: 0.9375rem;
        margin: 0;
    }

    .link-primary {
        color: #3b82f6;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
        display: inline-flex;
        align-items: center;
    }

    .link-primary:hover {
        color: #2563eb;
    }

    .auth-features {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        justify-content: center;
    }

    .feature-item {
        text-align: center;
        padding: 2rem;
        background: var(--panel);
        border-radius: 1rem;
        border: 1px solid var(--card-border);
        transition: all 0.3s ease;
    }

    .feature-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        border-color: rgba(59, 130, 246, 0.3);
    }

    .feature-item i {
        font-size: 3rem;
        color: #3b82f6;
        margin-bottom: 1rem;
    }

    .feature-item h3 {
        color: var(--text);
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .feature-item p {
        color: var(--muted);
        font-size: 0.9375rem;
        margin: 0;
    }

    @@media (max-width: 992px) {
        .auth-container {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .auth-features {
            flex-direction: row;
            flex-wrap: wrap;
        }

        .feature-item {
            flex: 1;
            min-width: 200px;
        }
    }

    @@media (max-width: 768px) {
        .auth-card {
            padding: 2rem 1.5rem;
        }

        .auth-title {
            font-size: 1.75rem;
        }

        .auth-features {
            flex-direction: column;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('forgotPasswordForm');
            const submitBtn = document.getElementById('submitBtn');
            const btnText = submitBtn.querySelector('.btn-text');
            const btnLoader = submitBtn.querySelector('.btn-loader');
            const phoneInput = document.getElementById('phoneInput');

            // Telefon numarası formatı
            if (phoneInput) {
                phoneInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.startsWith('90')) {
                        value = value.substring(2);
                    }
                    if (value.length > 0) {
                        value = '90' + value;
                    }
                    if (value.length > 2) {
                        value = '+' + value.substring(0, 2) + ' ' + value.substring(2, 5) + ' ' + value.substring(5, 8) + ' ' + value.substring(8, 10) + ' ' + value.substring(10, 12);
                    }
                    e.target.value = value;
                });
            }

            // Form submission
            if (form) {
                form.addEventListener('submit', function(e) {
                    if (form.checkValidity()) {
                        submitBtn.disabled = true;
                        btnText.style.display = 'none';
                        btnLoader.style.display = 'flex';
                    }
                });
            }
        });
    </script>
}

