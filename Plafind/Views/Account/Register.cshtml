@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('passwordInput');
            const confirmPasswordInput = document.getElementById('confirmPasswordInput');
            const passwordToggle = document.getElementById('passwordToggle');
            const confirmPasswordToggle = document.getElementById('confirmPasswordToggle');
            const passwordToggleIcon = document.getElementById('passwordToggleIcon');
            const confirmPasswordToggleIcon = document.getElementById('confirmPasswordToggleIcon');
            const registerForm = document.getElementById('registerForm');
            const submitBtn = document.getElementById('submitBtn');
            const btnText = submitBtn.querySelector('.btn-text');
            const btnLoader = submitBtn.querySelector('.btn-loader');
            const passwordStrengthContainer = document.getElementById('passwordStrengthContainer');
            const passwordStrengthFill = document.getElementById('passwordStrengthFill');
            const passwordStrengthText = document.getElementById('passwordStrengthText');
            const passwordRequirements = document.getElementById('passwordRequirements');
            const reqLength = document.getElementById('reqLength');
            const passwordMatchStatus = document.getElementById('passwordMatchStatus');
            const emailInput = document.getElementById('emailInput');
            const emailStatus = document.getElementById('emailStatus');

            // Password toggle
            function setupPasswordToggle(toggle, input, icon) {
                if (toggle && input) {
                    toggle.addEventListener('click', function() {
                        const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                        input.setAttribute('type', type);
                        
                        if (type === 'text') {
                            icon.classList.remove('fa-eye');
                            icon.classList.add('fa-eye-slash');
                        } else {
                            icon.classList.remove('fa-eye-slash');
                            icon.classList.add('fa-eye');
                        }
                    });
                }
            }

            setupPasswordToggle(passwordToggle, passwordInput, passwordToggleIcon);
            setupPasswordToggle(confirmPasswordToggle, confirmPasswordInput, confirmPasswordToggleIcon);

            // Password strength checker
            if (passwordInput) {
                passwordInput.addEventListener('input', function() {
                    const password = this.value;
                    
                    if (password.length > 0) {
                        passwordStrengthContainer.classList.add('active');
                        
                        let strength = 0;
                        let strengthClass = 'weak';
                        let strengthLabel = 'Zayıf';
                        
                        // Check length
                        if (password.length >= 6) {
                            reqLength.classList.add('met');
                            strength += 100;
                        } else {
                            reqLength.classList.remove('met');
                        }
                        
                        // Determine strength
                        if (password.length >= 6) {
                            strengthClass = 'strong';
                            strengthLabel = 'Güçlü';
                        } else if (password.length >= 4) {
                            strengthClass = 'medium';
                            strengthLabel = 'Orta';
                        }
                        
                        passwordStrengthFill.className = 'password-strength-fill ' + strengthClass;
                        passwordStrengthText.textContent = 'Şifre gücü: ' + strengthLabel;
                    } else {
                        passwordStrengthContainer.classList.remove('active');
                        reqLength.classList.remove('met');
                    }
                    
                    checkPasswordMatch();
                });
            }

            // Password match checker
            function checkPasswordMatch() {
                const password = passwordInput.value;
                const confirmPassword = confirmPasswordInput.value;
                
                if (confirmPassword.length > 0) {
                    if (password === confirmPassword && password.length > 0) {
                        passwordMatchStatus.innerHTML = '<i class="fas fa-check-circle"></i>';
                        passwordMatchStatus.className = 'input-status valid';
                        confirmPasswordInput.style.borderColor = '#22c55e';
                    } else {
                        passwordMatchStatus.innerHTML = '<i class="fas fa-times-circle"></i>';
                        passwordMatchStatus.className = 'input-status invalid';
                        confirmPasswordInput.style.borderColor = '#ef4444';
                    }
                } else {
                    passwordMatchStatus.innerHTML = '';
                    passwordMatchStatus.className = 'input-status';
                    confirmPasswordInput.style.borderColor = '';
                }
            }

            if (confirmPasswordInput) {
                confirmPasswordInput.addEventListener('input', checkPasswordMatch);
            }

            // Email validation
            if (emailInput) {
                emailInput.addEventListener('blur', function() {
                    const email = this.value;
                    const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                    
                    if (email.length > 0) {
                        if (emailRegex.test(email)) {
                            emailStatus.innerHTML = '<i class="fas fa-check-circle"></i>';
                            emailStatus.className = 'input-status valid';
                            this.style.borderColor = '#22c55e';
                        } else {
                            emailStatus.innerHTML = '<i class="fas fa-times-circle"></i>';
                            emailStatus.className = 'input-status invalid';
                            this.style.borderColor = '#ef4444';
                        }
                    } else {
                        emailStatus.innerHTML = '';
                        emailStatus.className = 'input-status';
                        this.style.borderColor = '';
                    }
                });
            }

            // Form submission
            if (registerForm) {
                registerForm.addEventListener('submit', function(e) {
                    if (registerForm.checkValidity()) {
                        submitBtn.disabled = true;
                        btnText.style.display = 'none';
                        btnLoader.style.display = 'flex';
                    }
                });
            }

            // Input focus animations
            const inputs = document.querySelectorAll('.form-input-custom');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    const icon = this.parentElement.querySelector('.input-icon');
                    if (icon) {
                        if (this.id === 'emailInput' || this.id.includes('Email')) {
                            icon.style.color = '#22c55e';
                        } else {
                            icon.style.color = '#22c55e';
                        }
                    }
                });
                input.addEventListener('blur', function() {
                    if (!this.value) {
                        const icon = this.parentElement.querySelector('.input-icon');
                        if (icon) {
                            icon.style.color = '';
                        }
                    }
                });
            });
        });
    </script>
