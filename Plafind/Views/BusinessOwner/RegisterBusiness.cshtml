@model Plafind.Models.RegisterBusinessViewModel

@{
    ViewData["Title"] = "İşletme Kaydet";
    var categories = ViewBag.Categories as List<Plafind.Models.Category> ?? new List<Plafind.Models.Category>();
}

<div class="container-fluid px-3 px-md-4 py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold">İşletme Kaydet</h2>
                    <p class="text-muted mb-0">İşletmenizi kaydedin ve yönetmeye başlayın</p>
                </div>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Ana Sayfa
                </a>
            </div>

            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <div>
                        @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                    </div>
                </div>
            }

            <form asp-action="RegisterBusiness" method="post" enctype="multipart/form-data" class="card shadow-sm">
                <div class="card-body p-4">
                    <h4 class="mb-4"><i class="fas fa-user me-2 text-primary"></i>Hesap Bilgileri</h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">E-posta Adresi *</label>
                                <input asp-for="Email" class="form-control" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Şifre *</label>
                                <input asp-for="Password" class="form-control" type="password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar *</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h4 class="mb-4"><i class="fas fa-store me-2 text-success"></i>İşletme Bilgileri</h4>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="BusinessName" class="form-label">İşletme Adı *</label>
                                <input asp-for="BusinessName" class="form-control" required />
                                <span asp-validation-for="BusinessName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CategoryId" class="form-label">Kategori</label>
                                <select asp-for="CategoryId" class="form-select">
                                    <option value="">Kategori Seçin</option>
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label">Adres *</label>
                                <input asp-for="Address" class="form-control" required />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label">Telefon *</label>
                                <input asp-for="Phone" class="form-control" required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="BusinessEmail" class="form-label">İşletme E-posta</label>
                                <input asp-for="BusinessEmail" class="form-control" type="email" />
                                <span asp-validation-for="BusinessEmail" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Website" class="form-label">Website</label>
                                <input asp-for="Website" class="form-control" placeholder="https://..." />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="WorkingHours" class="form-label">Çalışma Saatleri</label>
                                <input asp-for="WorkingHours" class="form-control" placeholder="Örn: 09:00-18:00" />
                                <span asp-validation-for="WorkingHours" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PriceRange" class="form-label">Fiyat Aralığı</label>
                                <select asp-for="PriceRange" class="form-select">
                                    <option value="">Fiyat Aralığı Seçin</option>
                                    <option value="₺">₺ (Ekonomik)</option>
                                    <option value="₺₺">₺₺ (Orta)</option>
                                    <option value="₺₺₺">₺₺₺ (Pahalı)</option>
                                    <option value="₺₺₺₺">₺₺₺₺ (Çok Pahalı)</option>
                                </select>
                                <span asp-validation-for="PriceRange" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
                                <div>
                                    <h5 class="mb-1">Haritadan Konum Seç</h5>
                                    <small class="text-muted">Mahalle, sokak veya önemli bir noktayı arayabilir, haritaya tıklayarak işaret bırakabilirsiniz.</small>
                                </div>
                                <div class="map-search d-flex gap-2">
                                    <input type="text" id="mapSearchInput" class="form-control" placeholder="Mahalle / Cadde / Yer adı" />
                                    <button type="button" id="mapSearchBtn" class="btn btn-outline-secondary">Ara</button>
                                </div>
                            </div>
                            <div id="businessFormMap" class="map-picker-canvas mb-2"></div>
                            <small id="mapStatusText" class="map-status-text text-muted d-block">
                                Haritaya tıklayarak işaret koyduğunuzda enlem ve boylam değerleri otomatik güncellenecektir.
                            </small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Latitude" class="form-label">Konum (Enlem)</label>
                                <input asp-for="Latitude" class="form-control" type="number" step="any" placeholder="36.5432" />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Longitude" class="form-label">Konum (Boylam)</label>
                                <input asp-for="Longitude" class="form-control" type="number" step="any" placeholder="31.9991" />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="imageFile" class="form-label">İşletme Görseli</label>
                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                        <small class="form-text text-muted">JPG, PNG veya GIF formatında, maksimum 5MB</small>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="ConsentAccepted" id="consentCheckbox" required>
                            <label class="form-check-label" for="consentCheckbox">
                                <a href="#" data-bs-toggle="modal" data-bs-target="#consentModal">Kullanım şartlarını</a> okudum ve kabul ediyorum *
                            </label>
                        </div>
                        <span asp-validation-for="ConsentAccepted" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>İşletmemi Kaydet
                        </button>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-lg">İptal</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .map-picker-canvas {
        width: 100%;
        height: 320px;
        border-radius: 1rem;
        border: 1px solid rgba(0,0,0,0.1);
    }

    .map-search {
        min-width: 320px;
    }

    @@media (max-width: 576px) {
        .map-search {
            flex-direction: column;
            width: 100%;
        }
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        window.initBusinessLocationPicker = function () {
            if (!window.LocationPicker) {
                return;
            }
            LocationPicker.init({
                mapElementId: 'businessFormMap',
                latInputId: 'Latitude',
                lngInputId: 'Longitude',
                addressInputId: 'Address',
                searchInputId: 'mapSearchInput',
                searchButtonId: 'mapSearchBtn',
                statusElementId: 'mapStatusText'
            });
        };
    </script>
    @if (!string.IsNullOrEmpty(ViewBag.GoogleMapsApiKey as string))
    {
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=@ViewBag.GoogleMapsApiKey&callback=initBusinessLocationPicker"></script>
    }
    else
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var status = document.getElementById('mapStatusText');
                if (status) {
                    status.textContent = 'Google Maps anahtarı bulunamadığından harita yüklenemedi.';
                    status.classList.remove('text-muted');
                    status.classList.add('text-danger');
                }
            });
        </script>
    }
}

