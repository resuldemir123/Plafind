@model IEnumerable<Plafind.Models.UserFavorite>

@{
    ViewData["Title"] = "İşletme Favorileri";
    var business = ViewBag.Business as Plafind.Models.Business;
}

<div class="container-fluid px-3 px-md-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">İşletme Favorileri</h2>
            <p class="text-muted mb-0">@business?.Name işletmenizi favorilerine ekleyen kullanıcılar</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>

    @if (business != null)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-store me-2 text-primary"></i>@business.Name
                </h5>
                <p class="card-text text-muted">
                    <i class="fas fa-map-marker-alt me-1"></i>@business.Address
                </p>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Henüz bu işletmenizi favorilerine ekleyen kullanıcı yok.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Kullanıcı</th>
                                <th>E-posta</th>
                                <th>Favoriye Ekleme Tarihi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var favorite in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-circle me-2 text-primary"></i>
                                            <div>
                                                <strong>@(favorite.User?.FullName ?? favorite.User?.UserName ?? "Kullanıcı")</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(favorite.User?.Email))
                                        {
                                            <i class="fas fa-envelope me-1 text-muted"></i>
                                            @favorite.User.Email
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <i class="fas fa-clock me-1 text-muted"></i>
                                        @favorite.AddedDate.ToString("dd.MM.yyyy HH:mm")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                Toplam <strong>@Model.Count()</strong> kullanıcı bu işletmenizi favorilerine eklemiş.
            </p>
        </div>
    }
</div>

