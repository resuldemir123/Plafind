@model Plafind.Models.ApplicationUser

@{
    ViewData["Title"] = "Kullanıcı Paneli";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Hoş Geldiniz, @Model.FullName</h1>
    </div>

    <!-- İstatistikler -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Favorilerim</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Favorites.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-heart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Yorumlarım</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Reviews.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Hızlı Erişim</h6>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Businesses", "User")" class="list-group-item list-group-item-action">
                            <i class="fas fa-building mr-2"></i>İşletmeleri Görüntüle
                        </a>
                        <a href="@Url.Action("Favorites", "User")" class="list-group-item list-group-item-action">
                            <i class="fas fa-heart mr-2"></i>Favorilerim
                        </a>
                        <a href="@Url.Action("MyReviews", "User")" class="list-group-item list-group-item-action">
                            <i class="fas fa-comments mr-2"></i>Yorumlarım
                        </a>
                        <a href="@Url.Action("Profile", "User")" class="list-group-item list-group-item-action">
                            <i class="fas fa-user mr-2"></i>Profilimi Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Son Favorilerim</h6>
                </div>
                <div class="card-body">
                    @if (Model.Favorites.Any())
                    {
                        @foreach (var favorite in Model.Favorites.Take(3))
                        {
                            <div class="d-flex align-items-center mb-3">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@favorite.Business?.Name</h6>
                                    <small class="text-muted">@favorite.Business?.Category</small>
                                </div>
                                <div class="text-warning">
                                    @if (favorite.Business?.AverageRating > 0)
                                    {
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= favorite.Business.AverageRating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Henüz favori işletmeniz yok.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
