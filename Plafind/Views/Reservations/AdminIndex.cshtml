@model IEnumerable<Plafind.Models.Reservation>

@{
    ViewData["Title"] = "Rezervasyon Yönetimi";
}

<div class="admin-reservations-page">
    <div class="container-fluid py-4">
        <div class="page-header mb-4">
            <h1 class="page-title">
                <i class="fas fa-calendar-check me-2"></i>
                Rezervasyon Yönetimi
            </h1>
            <p class="page-subtitle">Tüm rezervasyon taleplerini görüntüleyin ve yönetin</p>
            <span class="badge-count">@Model.Count() rezervasyon</span>
        </div>

        <div class="admin-card">
            <div class="card-header-custom">
                <h6 class="card-title-custom">
                    <i class="fas fa-list me-2"></i>
                    Tüm Rezervasyonlar
                </h6>
            </div>
            <div class="card-body-custom">
                <div class="table-responsive">
                    <table class="table admin-table">
                        <thead>
                            <tr>
                                <th>İşletme</th>
                                <th>Kullanıcı</th>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Kişi</th>
                                <th>Durum</th>
                                <th>İletişim</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reservation in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="business-info">
                                            <strong class="business-name">@(reservation.Business?.Name ?? "Bilinmiyor")</strong>
                                            @if (reservation.Business?.Category != null)
                                            {
                                                <small class="business-category">@reservation.Business.Category.Name</small>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="user-info">
                                            <div class="user-avatar">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div class="user-details">
                                                <strong class="user-name">@(reservation.User?.DisplayName ?? reservation.User?.FullName ?? reservation.User?.UserName ?? "Bilinmiyor")</strong>
                                                <small class="user-phone">@reservation.ContactPhone</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="date-text">@reservation.RequestedDate.ToString("dd.MM.yyyy")</span>
                                    </td>
                                    <td>
                                        <span class="time-text">@reservation.RequestedTime.ToString(@"hh\:mm")</span>
                                    </td>
                                    <td>
                                        <span class="people-count">
                                            <i class="fas fa-users me-1"></i>
                                            @reservation.NumberOfPeople
                                        </span>
                                    </td>
                                    <td>
                                        @switch (reservation.Status)
                                        {
                                            case "Beklemede":
                                                <span class="badge-status badge-pending">
                                                    <i class="fas fa-clock me-1"></i>
                                                    Beklemede
                                                </span>
                                                break;
                                            case "Onaylandı":
                                                <span class="badge-status badge-approved">
                                                    <i class="fas fa-check-circle me-1"></i>
                                                    Onaylandı
                                                </span>
                                                break;
                                            case "Reddedildi":
                                                <span class="badge-status badge-rejected">
                                                    <i class="fas fa-times-circle me-1"></i>
                                                    Reddedildi
                                                </span>
                                                break;
                                            case "İptal":
                                                <span class="badge-status badge-cancelled">
                                                    <i class="fas fa-ban me-1"></i>
                                                    İptal
                                                </span>
                                                break;
                                            default:
                                                <span class="badge-status badge-info">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    @reservation.Status
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="contact-info">
                                            <div class="contact-item">
                                                <i class="fas fa-phone"></i>
                                                <span>@reservation.ContactPhone</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(reservation.ContactEmail))
                                            {
                                                <div class="contact-item">
                                                    <i class="fas fa-envelope"></i>
                                                    <span>@reservation.ContactEmail</span>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            @if (reservation.Status == "Beklemede")
                                            {
                                                <a href="@Url.Action("Approve", new { id = reservation.Id })" 
                                                   class="btn-action btn-approve"
                                                   title="Onayla"
                                                   onclick="return confirm('Bu rezervasyonu onaylamak istediğinizden emin misiniz?')">
                                                    <i class="fas fa-check"></i>
                                                </a>
                                                <a href="@Url.Action("Reject", new { id = reservation.Id })" 
                                                   class="btn-action btn-reject"
                                                   title="Reddet"
                                                   onclick="return confirm('Bu rezervasyonu reddetmek istediğinizden emin misiniz?')">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            }
                                            <button class="btn-action btn-detail" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#detailsModal@(reservation.Id)"
                                                    title="Detay">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detay Modalları -->
@foreach (var reservation in Model)
{
    <div class="modal fade" id="detailsModal@(reservation.Id)" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content modal-dark">
                <div class="modal-header modal-header-dark">
                    <h5 class="modal-title">
                        <i class="fas fa-info-circle me-2"></i>
                        Rezervasyon Detayları
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body modal-body-dark">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="section-title">
                                <i class="fas fa-building me-2"></i>
                                İşletme Bilgileri
                            </h6>
                            <div class="info-item">
                                <strong>Ad:</strong> 
                                <span>@(reservation.Business?.Name ?? "Bilinmiyor")</span>
                            </div>
                            @if (reservation.Business?.Category != null)
                            {
                                <div class="info-item">
                                    <strong>Kategori:</strong> 
                                    <span>@reservation.Business.Category.Name</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(reservation.Business?.Address))
                            {
                                <div class="info-item">
                                    <strong>Adres:</strong> 
                                    <span>@reservation.Business.Address</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(reservation.Business?.Phone))
                            {
                                <div class="info-item">
                                    <strong>Telefon:</strong> 
                                    <span>@reservation.Business.Phone</span>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <h6 class="section-title">
                                <i class="fas fa-calendar-alt me-2"></i>
                                Rezervasyon Bilgileri
                            </h6>
                            <div class="info-item">
                                <strong>Tarih:</strong> 
                                <span>@reservation.RequestedDate.ToString("dd.MM.yyyy")</span>
                            </div>
                            <div class="info-item">
                                <strong>Saat:</strong> 
                                <span>@reservation.RequestedTime.ToString(@"hh\:mm")</span>
                            </div>
                            <div class="info-item">
                                <strong>Kişi Sayısı:</strong> 
                                <span>@reservation.NumberOfPeople</span>
                            </div>
                            <div class="info-item">
                                <strong>Durum:</strong> 
                                @switch (reservation.Status)
                                {
                                    case "Beklemede":
                                        <span class="badge-status badge-pending">Beklemede</span>
                                        break;
                                    case "Onaylandı":
                                        <span class="badge-status badge-approved">Onaylandı</span>
                                        break;
                                    case "Reddedildi":
                                        <span class="badge-status badge-rejected">Reddedildi</span>
                                        break;
                                    case "İptal":
                                        <span class="badge-status badge-cancelled">İptal</span>
                                        break;
                                    default:
                                        <span class="badge-status badge-info">@reservation.Status</span>
                                        break;
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h6 class="section-title">
                                <i class="fas fa-user me-2"></i>
                                Kullanıcı Bilgileri
                            </h6>
                            <div class="info-item">
                                <strong>Ad Soyad:</strong> 
                                <span>@(reservation.User?.DisplayName ?? reservation.User?.FullName ?? reservation.User?.UserName ?? "Bilinmiyor")</span>
                            </div>
                            <div class="info-item">
                                <strong>Telefon:</strong> 
                                <span>@reservation.ContactPhone</span>
                            </div>
                            @if (!string.IsNullOrEmpty(reservation.ContactEmail))
                            {
                                <div class="info-item">
                                    <strong>E-posta:</strong> 
                                    <span>@reservation.ContactEmail</span>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <h6 class="section-title">
                                <i class="fas fa-clock me-2"></i>
                                Zaman Bilgileri
                            </h6>
                            <div class="info-item">
                                <strong>Oluşturulma:</strong> 
                                <span>@reservation.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                            @if (reservation.UpdatedDate.HasValue)
                            {
                                <div class="info-item">
                                    <strong>Güncellenme:</strong> 
                                    <span>@reservation.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")</span>
                                </div>
                            }
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(reservation.Notes))
                    {
                        <div class="mt-4">
                            <h6 class="section-title">
                                <i class="fas fa-sticky-note me-2"></i>
                                Özel Notlar
                            </h6>
                            <div class="notes-box">
                                @reservation.Notes
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer modal-footer-dark">
                    @if (reservation.Status == "Beklemede")
                    {
                        <a href="@Url.Action("Approve", new { id = reservation.Id })" 
                           class="btn-modal btn-modal-approve"
                           onclick="return confirm('Bu rezervasyonu onaylamak istediğinizden emin misiniz?')">
                            <i class="fas fa-check me-2"></i>
                            Onayla
                        </a>
                        <a href="@Url.Action("Reject", new { id = reservation.Id })" 
                           class="btn-modal btn-modal-reject"
                           onclick="return confirm('Bu rezervasyonu reddetmek istediğinizden emin misiniz?')">
                            <i class="fas fa-times me-2"></i>
                            Reddet
                        </a>
                    }
                    <button type="button" class="btn-modal btn-modal-close" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>
                        Kapat
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .admin-reservations-page {
        min-height: 100vh;
        background: var(--bg-800);
        color: var(--text);
    }

    .page-header {
        margin-bottom: 2rem;
        position: relative;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

    .page-title i {
        color: #ffc107;
    }

    .page-subtitle {
        color: var(--muted);
        font-size: 1rem;
        margin: 0 0 1rem 0;
    }

    .badge-count {
        position: absolute;
        top: 0;
        right: 0;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .admin-card {
        background: var(--panel);
        border-radius: 1rem;
        border: 1px solid var(--card-border);
        overflow: hidden;
    }

    .card-header-custom {
        background: rgba(59, 130, 246, 0.1);
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--card-border);
    }

    .card-title-custom {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text);
        margin: 0;
        display: flex;
        align-items: center;
    }

    .card-title-custom i {
        color: #3b82f6;
    }

    .card-body-custom {
        padding: 1.5rem;
    }

    .admin-table {
        width: 100%;
        margin: 0;
        color: var(--text);
        border-collapse: separate;
        border-spacing: 0;
    }

    .admin-table thead th {
        background: rgba(59, 130, 246, 0.1);
        color: #000000 !important;
        font-weight: 600;
        padding: 1rem;
        border-bottom: 2px solid #e5e7eb;
        text-align: left;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .admin-table tbody tr {
        border-bottom: 1px solid #e5e7eb;
        transition: background-color 0.2s ease;
        background: #ffffff;
    }

    .admin-table tbody tr:hover {
        background: rgba(59, 130, 246, 0.1);
    }

    .admin-table tbody td {
        padding: 1.25rem 1rem;
        vertical-align: middle;
        color: #000000 !important;
    }

    .admin-table tbody td *:not(.badge-status):not(.badge-status *) {
        color: #000000 !important;
    }

    .admin-table tbody td strong,
    .admin-table tbody td span:not(.badge-status),
    .admin-table tbody td div,
    .admin-table tbody td small {
        color: #000000 !important;
    }

    .business-info {
        display: flex;
        flex-direction: column;
    }

    .business-name {
        color: #000000 !important;
        font-size: 0.9375rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .business-category {
        color: #000000 !important;
        font-size: 0.8125rem;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        flex-shrink: 0;
    }

    .user-details {
        display: flex;
        flex-direction: column;
    }

    .user-name {
        color: #000000 !important;
        font-size: 0.9375rem;
        font-weight: 600;
    }

    .user-phone {
        color: #000000 !important;
        font-size: 0.8125rem;
    }

    .date-text,
    .time-text {
        color: #000000 !important;
        font-size: 0.9375rem;
    }

    .people-count {
        display: flex;
        align-items: center;
        color: #000000 !important;
        font-size: 0.9375rem;
        font-weight: 600;
    }

    .people-count i {
        color: #3b82f6;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #000000 !important;
        font-size: 0.875rem;
    }

    .contact-item i {
        color: #3b82f6;
        width: 16px;
    }

    .badge-status {
        display: inline-flex;
        align-items: center;
        padding: 0.375rem 0.75rem;
        border-radius: 0.5rem;
        font-size: 0.8125rem;
        font-weight: 600;
    }

    .badge-pending {
        background: rgba(255, 193, 7, 0.2);
        color: #ffc107;
        border: 1px solid rgba(255, 193, 7, 0.3);
    }

    .badge-approved {
        background: rgba(34, 197, 94, 0.2);
        color: #22c55e;
        border: 1px solid rgba(34, 197, 94, 0.3);
    }

    .badge-rejected {
        background: rgba(239, 68, 68, 0.2);
        color: #ef4444;
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .badge-cancelled {
        background: rgba(107, 114, 128, 0.2);
        color: #6b7280;
        border: 1px solid rgba(107, 114, 128, 0.3);
    }

    .badge-info {
        background: rgba(59, 130, 246, 0.2);
        color: #3b82f6;
        border: 1px solid rgba(59, 130, 246, 0.3);
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .btn-action {
        width: 36px;
        height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.875rem;
        border: none;
        cursor: pointer;
    }

    .btn-approve {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
    }

    .btn-approve:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(34, 197, 94, 0.4);
        color: white;
    }

    .btn-reject {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }

    .btn-reject:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .btn-detail {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
    }

    .btn-detail:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
        color: white;
    }

    /* Modal Styles */
    .modal-dark {
        background: var(--panel);
        border: 1px solid var(--card-border);
    }

    .modal-header-dark {
        background: rgba(59, 130, 246, 0.1);
        border-bottom: 1px solid var(--card-border);
        color: var(--text);
    }

    .modal-title {
        color: var(--text);
        font-weight: 600;
        display: flex;
        align-items: center;
    }

    .modal-title i {
        color: #3b82f6;
    }

    .modal-body-dark {
        background: var(--panel);
        color: var(--text);
    }

    .section-title {
        color: var(--text);
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--card-border);
    }

    .section-title i {
        color: #3b82f6;
    }

    .info-item {
        margin-bottom: 0.75rem;
        color: var(--text);
    }

    .info-item strong {
        color: var(--text);
        margin-right: 0.5rem;
    }

    .info-item span {
        color: var(--muted);
    }

    .notes-box {
        background: rgba(59, 130, 246, 0.05);
        border: 1px solid var(--card-border);
        border-radius: 0.5rem;
        padding: 1rem;
        color: var(--text);
        line-height: 1.6;
    }

    .modal-footer-dark {
        background: var(--panel);
        border-top: 1px solid var(--card-border);
    }

    .btn-modal {
        padding: 0.625rem 1.25rem;
        border-radius: 0.5rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-modal-approve {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
    }

    .btn-modal-approve:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(34, 197, 94, 0.4);
        color: white;
    }

    .btn-modal-reject {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }

    .btn-modal-reject:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        color: white;
    }

    .btn-modal-close {
        background: var(--card-border);
        color: var(--text);
    }

    .btn-modal-close:hover {
        background: var(--muted);
        color: var(--text);
    }

    @@media (max-width: 768px) {
        .admin-table {
            font-size: 0.875rem;
        }

        .admin-table thead th,
        .admin-table tbody td {
            padding: 0.75rem 0.5rem;
        }

        .user-info {
            flex-direction: column;
            align-items: flex-start;
        }

        .badge-count {
            position: static;
            display: inline-block;
            margin-top: 0.5rem;
        }
    }
</style>
