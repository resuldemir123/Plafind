@model Plafind.Models.Review

@{
    ViewData["Title"] = "Yeni Yorum Ekle";
    var businessId = ViewBag.BusinessId as int?;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Search", "Home")">İşletmeler</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Details", "Businesses", new { id = businessId })">İşletme Detay</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-route-businessId="@businessId">Yorumlar</a></li>
            <li class="breadcrumb-item active">Yeni Yorum</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold text-dark">
                        <i class="fas fa-plus-circle text-primary me-2"></i>
                        Yeni Yorum Ekle
                    </h1>
                    <p class="text-muted">İşletme hakkındaki deneyimlerinizi paylaşın</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    @if (!User.IsInRole("Admin"))
                    {
                        <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="BusinessId" value="@businessId" />

                        <!-- Rating Section -->
                        <div class="mb-4">
                            <label class="form-label fw-bold fs-5">
                                <i class="fas fa-star text-warning me-2"></i>
                                Puan Verin
                            </label>
                            <div class="rating-input mb-3">
                                <div class="d-flex gap-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="Rating" id="rating@(i)" value="@i"
                                                   @(i == 5 ? "checked" : "")>
                                            <label class="form-check-label rating-label" for="rating@(i)">
                                                <span class="rating-stars">
                                                    @for (int j = 1; j <= 5; j++)
                                                    {
                                                        @if (j <= i)
                                                        {
                                                            <i class="fas fa-star text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star text-warning"></i>
                                                        }
                                                    }
                                                </span>
                                                <span class="ms-2">(@i/5)</span>
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <!-- Comment Section -->
                        <div class="mb-4">
                            <label asp-for="Comment" class="form-label fw-bold fs-5">
                                <i class="fas fa-comment text-primary me-2"></i>
                                Yorumunuz
                            </label>
                            <textarea asp-for="Comment" class="form-control" rows="6"
                                      placeholder="İşletme hakkındaki deneyimlerinizi, memnun kaldığınız veya geliştirilmesini istediğiniz noktaları yazın..."></textarea>
                            <div class="form-text">
                                Yorumunuz diğer kullanıcılar için yol gösterici olacaktır.
                            </div>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Index" asp-route-businessId="@businessId" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Yorumu Kaydet
                            </button>
                        </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            Admin hesapları yorum oluşturamaz. Yalnızca gelen yorumları görüntüleyebilirsiniz.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Rating yıldızlarına tıklama efekti
        document.querySelectorAll('.rating-input .form-check-input').forEach(radio => {
            radio.addEventListener('change', function() {
                // Tüm yıldızları sıfırla
                document.querySelectorAll('.rating-label .rating-stars').forEach(stars => {
                    stars.querySelectorAll('i').forEach(star => {
                        star.className = 'far fa-star text-warning';
                    });
                });

                // Seçilen puan kadar yıldızı doldur
                const rating = parseInt(this.value);
                const label = this.closest('.form-check').querySelector('.rating-stars');
                label.querySelectorAll('i').forEach((star, index) => {
                    if (index < rating) {
                        star.className = 'fas fa-star text-warning';
                    }
                });
            });
        });

        // Sayfa yüklendiğinde varsayılan puanı göster
        document.addEventListener('DOMContentLoaded', function() {
            const defaultRating = document.querySelector('input[name="Rating"]:checked');
            if (defaultRating) {
                defaultRating.dispatchEvent(new Event('change'));
            }
        });
    </script>
}

<style>
    .card {
        border-radius: 12px;
    }

    .btn {
        border-radius: 8px;
    }

    .rating-input .form-check-input {
        display: none;
    }

    .rating-input .form-check-label {
        cursor: pointer;
        padding: 10px 15px;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .rating-input .form-check-input:checked + .rating-label {
        border-color: #0d6efd;
        background-color: #f8f9fa;
    }

    .rating-input .rating-label:hover {
        border-color: #0d6efd;
        background-color: #f8f9fa;
    }

    .rating-stars {
        font-size: 1.2rem;
    }

    .form-control {
        border-radius: 8px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
</style>