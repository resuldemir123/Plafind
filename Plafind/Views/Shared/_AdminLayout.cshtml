                        <span>2FA Ayarlarƒ±</span>
                    </a>
                </div>
            </div>

            <!-- User Management -->
            <div class="nav-section">
                <div class="nav-section-title">üë• User Management</div>
                <div class="nav-item">
                    <a href="@Url.Action("Users", "Admin")" class="nav-link-admin @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")">
                        <i class="fas fa-users"></i>
                        <span>Kullanƒ±cƒ± Listesi</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("BannedUsers", "Admin")" class="nav-link-admin">
                        <i class="fas fa-ban"></i>
                        <span>Banlƒ± Kullanƒ±cƒ±lar</span>
                    </a>
                </div>
            </div>

            <!-- Role & Permission -->
            <div class="nav-section">
                <div class="nav-section-title">üõ° Role & Permission</div>
                <div class="nav-item">
                    <a href="@Url.Action("Roles", "Admin")" class="nav-link-admin @(ViewContext.RouteData.Values["action"]?.ToString() == "Roles" ? "active" : "")">
                        <i class="fas fa-user-tag"></i>
                        <span>Roller</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("Permissions", "Admin")" class="nav-link-admin">
                        <i class="fas fa-lock"></i>
                        <span>ƒ∞zinler</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("AssignRoles", "Admin")" class="nav-link-admin">
                        <i class="fas fa-user-check"></i>
                        <span>Rol Atama</span>
                    </a>
                </div>
            </div>

            <!-- Content Management -->
            <div class="nav-section">
                <div class="nav-section-title">üì¶ Content Management</div>
                <div class="nav-item">
                    <a href="@Url.Action("Businesses", "Admin")" class="nav-link-admin @(ViewContext.RouteData.Values["action"]?.ToString() == "Businesses" ? "active" : "")">
                        <i class="fas fa-building"></i>
                        <span>ƒ∞≈ületmeler</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("Categories", "Admin")" class="nav-link-admin">
                        <i class="fas fa-tags"></i>
                        <span>Kategoriler</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("News", "Admin")" class="nav-link-admin">
                        <i class="fas fa-newspaper"></i>
                        <span>Haberler</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("Reviews", "Admin")" class="nav-link-admin @(ViewContext.RouteData.Values["action"]?.ToString() == "Reviews" ? "active" : "")">
                        <i class="fas fa-comments"></i>
                        <span>Yorumlar</span>
                        @if (ViewBag.PendingReviewsCount != null && ViewBag.PendingReviewsCount > 0)
                        {
                            <span class="nav-badge">@ViewBag.PendingReviewsCount</span>
                        }
                    </a>
                </div>
            </div>

            <!-- Analytics -->
            <div class="nav-section">
                <div class="nav-section-title">üìä Analytics</div>
                <div class="nav-item">
                    <a href="@Url.Action("Analytics", "Admin")" class="nav-link-admin">
                        <i class="fas fa-chart-line"></i>
                        <span>ƒ∞statistikler</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("Reports", "Admin")" class="nav-link-admin">
                        <i class="fas fa-file-alt"></i>
                        <span>Raporlar</span>
                    </a>
                </div>
            </div>

            <!-- System Settings -->
            <div class="nav-section">
                <div class="nav-section-title">üõ† System Settings</div>
                <div class="nav-item">
                    <a href="@Url.Action("Settings", "Admin")" class="nav-link-admin">
                        <i class="fas fa-cog"></i>
                        <span>Site Ayarlarƒ±</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("EmailSettings", "Admin")" class="nav-link-admin">
                        <i class="fas fa-envelope"></i>
                        <span>E-posta SMTP</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("Backup", "Admin")" class="nav-link-admin">
                        <i class="fas fa-database"></i>
                        <span>Backup Y√∂netimi</span>
                    </a>
                </div>
            </div>

            <!-- Media Manager -->
            <div class="nav-section">
                <div class="nav-section-title">üìÇ Media Manager</div>
                <div class="nav-item">
                    <a href="@Url.Action("Media", "Admin")" class="nav-link-admin">
                        <i class="fas fa-images"></i>
                        <span>Medya Y√∂netimi</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("Upload", "Admin")" class="nav-link-admin">
                        <i class="fas fa-upload"></i>
                        <span>Dosya Y√ºkle</span>
                    </a>
                </div>
            </div>

            <!-- Logs & Tracking -->
            <div class="nav-section">
                <div class="nav-section-title">üìù Logs & Tracking</div>
                <div class="nav-item">
                    <a href="@Url.Action("Logs", "Admin")" class="nav-link-admin">
                        <i class="fas fa-list-alt"></i>
                        <span>Sistem Loglarƒ±</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("ActivityLog", "Admin")" class="nav-link-admin">
                        <i class="fas fa-history"></i>
                        <span>Aktivite Takibi</span>
                    </a>
                </div>
            </div>

            <!-- Feedback & Support -->
            <div class="nav-section">
                <div class="nav-section-title">üí¨ Feedback & Support</div>
                <div class="nav-item">
                    <a href="@Url.Action("Messages", "Admin")" class="nav-link-admin">
                        <i class="fas fa-inbox"></i>
                        <span>Kullanƒ±cƒ± Mesajlarƒ±</span>
                        @if (ViewBag.UnreadMessagesCount != null && ViewBag.UnreadMessagesCount > 0)
                        {
                            <span class="nav-badge">@ViewBag.UnreadMessagesCount</span>
                        }
                    </a>
                </div>
                <div class="nav-item">
                    <a href="@Url.Action("Tickets", "Admin")" class="nav-link-admin">
                        <i class="fas fa-ticket-alt"></i>
                        <span>Destek Biletleri</span>
                    </a>
                </div>
            </div>

            <!-- Back to Site -->
            <div class="nav-section mt-4">
                <div class="nav-item">
                    <a href="@Url.Action("Index", "Home")" class="nav-link-admin" target="_blank">
                        <i class="fas fa-external-link-alt"></i>
                        <span>Siteye D√∂n</span>
                    </a>
                </div>
            </div>
        </nav>
    </aside>

    <!-- Sidebar Overlay (Mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Main Content -->
    <main class="admin-main">
        <!-- Header -->
        <header class="admin-header">
            <div class="admin-header-left">
                <button class="btn btn-link d-lg-none" id="sidebarToggle" type="button">
                    <i class="fas fa-bars"></i>
                </button>
                <div>
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                </div>
            </div>
            <div class="admin-header-right">
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </header>

        <!-- Content -->
        <div class="admin-content">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    
    <script>
        // Sidebar toggle
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('adminSidebar').classList.toggle('show');
            document.getElementById('sidebarOverlay').classList.toggle('show');
        });

        document.getElementById('sidebarOverlay')?.addEventListener('click', function() {
            document.getElementById('adminSidebar').classList.remove('show');
            this.classList.remove('show');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

