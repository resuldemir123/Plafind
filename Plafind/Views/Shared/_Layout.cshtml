<!DOCTYPE html>
<html lang="tr" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlaceFind</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* Theme Variables */
        :root {
            --bg-primary: #f8f9fa;
            --bg-secondary: #ffffff;
            --text-primary: #212529;
            --text-secondary: #6c757d;
            --border-color: #dee2e6;
            --card-bg: #ffffff;
            --navbar-bg: linear-gradient(180deg, #1e293b 0%, #0f172a 100%);
        }

        [data-theme="dark"] {
            --bg-primary: #0f172a;
            --bg-secondary: #1e293b;
            --text-primary: #f1f5f9;
            --text-secondary: #94a3b8;
            --border-color: #334155;
            --card-bg: #1e293b;
            --navbar-bg: linear-gradient(180deg, #0f172a 0%, #020617 100%);
        }

        /* Small global adjustments for header/footer aesthetics */
        html, body {
            margin: 0 !important;
            padding: 0 !important;
            overflow-x: hidden;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        body {
            background-color: var(--bg-primary);
            color: var(--text-primary);
            padding-top: 0 !important;
        }
        
        /* Remove white spaces on sides */
        .container, .container-fluid {
            max-width: 100% !important;
            padding-left: 1rem !important;
            padding-right: 1rem !important;
        }
        
        @@media (min-width: 1200px) {
            .container {
                max-width: 1320px;
            }
        }

        /* Anasayfa için özel */
        body.home-page {
            padding-top: 0 !important;
        }

        header {
            width: 100%;
            position: relative;
        }

        .navbar.sticky-top {
            position: sticky !important;
            top: 0 !important;
            left: 0 !important;
            right: 0 !important;
            width: 100% !important;
            z-index: 9999 !important;
            border-bottom: none;
            background: var(--navbar-bg) !important;
            box-shadow: 0 2px 15px rgba(0,0,0,0.3);
            padding: 0.5rem 0;
        }

        .navbar .container {
            max-width: 1320px;
            margin: 0 auto;
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }

        .navbar .nav-link {
            padding: 0.6rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .navbar .nav-link:hover {
            background: rgba(255,255,255,0.1);
        }

        .navbar .dropdown-menu {
            background: #1e293b;
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 12px;
            margin-top: 0.5rem;
        }

        .navbar .dropdown-item {
            color: rgba(255,255,255,0.8);
            border-radius: 8px;
            margin: 0.25rem 0.5rem;
            padding: 0.6rem 1rem;
        }

        .navbar .dropdown-item:hover {
            background: rgba(255,255,255,0.1);
            color: #fff;
        }

        main[role="main"] {
            padding-top: 0;
            width: 100%;
            overflow-x: hidden;
            box-sizing: border-box;
            background-color: var(--bg-primary);
            min-height: calc(100vh - 200px);
        }
        
        /* Cards and content */
        .card {
            background-color: var(--card-bg);
            color: var(--text-primary);
            border-color: var(--border-color);
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }
        
        .card-body {
            color: var(--text-primary);
        }
        
        .text-muted {
            color: var(--text-secondary) !important;
        }
        
        .bg-light {
            background-color: var(--bg-secondary) !important;
        }
        
        /* Theme toggle button */
        #themeToggle {
            border: 1px solid rgba(255,255,255,0.3);
            transition: all 0.3s ease;
        }
        
        #themeToggle:hover {
            background: rgba(255,255,255,0.1);
            border-color: rgba(255,255,255,0.5);
        }

        .navbar-brand {
            font-size: 1.05rem;
        }

        .navbar-logo {
            height: 45px;
            width: auto;
            object-fit: contain;
            max-width: 150px;
            transition: all 0.3s ease;
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
        }

        .navbar-logo:hover {
            transform: scale(1.05);
            filter: drop-shadow(0 4px 8px rgba(255,193,7,0.4));
        }

        .footer {
            background: #0b1220;
            color: #e9ecef;
        }

        .footer a {
            color: #e9ecef;
        }

        .top-2 {
            top: .5rem;
        }

        .end-2 {
            right: .5rem;
        }

        .footer-logo {
            height: 70px;
            width: auto;
            object-fit: contain;
            max-width: 220px;
            opacity: 0.95;
            transition: all 0.3s ease;
            background: rgba(255,255,255,0.1);
            padding: 8px;
            border-radius: 8px;
        }

        .footer-logo:hover {
            opacity: 1;
            transform: scale(1.05);
            background: rgba(255,255,255,0.15);
            box-shadow: 0 4px 12px rgba(255,193,7,0.3);
        }

        @@media (max-width: 768px) {
            .navbar-logo {
                height: 38px;
                max-width: 130px;
            }

            .footer-logo {
                height: 50px;
                max-width: 150px;
            }
        }
    </style>
</head>
<body class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "home-page" : "")">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow-lg">
            <div class="container">
                <a class="navbar-brand fw-bold text-white d-flex align-items-center" href="@Url.Action("Index", "Home")">
                    <img src="~/images/Logo.png" alt="Alanya İşletme Rehberi Logo" class="navbar-logo" onerror="this.onerror=null; this.src='~/images/Logo.jpg';" />
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link fw-medium text-white" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home me-1 text-warning"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium text-white" href="@Url.Action("Search", "Home")">
                                <i class="fas fa-search me-1 text-info"></i> İşletme Ara
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium text-white" href="@Url.Action("Map", "Businesses")">
                                <i class="fas fa-map-marked-alt me-1 text-success"></i> Harita
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium text-white" href="@Url.Action("Index", "News")">
                                <i class="fas fa-newspaper me-1 text-warning"></i> Haberler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium text-white" href="@Url.Action("Contact", "Home")">
                                <i class="fas fa-envelope me-1 text-success"></i> İletişim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium text-white" href="@Url.Action("About", "Home")">
                                <i class="fas fa-info-circle me-1 text-info"></i> Hakkımızda
                            </a>
                        </li>
                        @if (!(User.Identity?.IsAuthenticated == true))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-medium" href="@Url.Action("RegisterBusiness", "BusinessOwner")" style="color: #ffc107 !important;">
                                    <i class="fas fa-store me-1"></i> İşletme Kaydet
                                </a>
                            </li>
                        }

                        @* Roles *@
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle fw-medium text-white" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog me-1 text-danger"></i> Admin Panel
                                    </a>
                                    <ul class="dropdown-menu shadow border-0" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item py-2" href="@Url.Action("Index", "Admin")"><i class="fas fa-tachometer-alt me-2 text-primary"></i> Dashboard</a></li>
                                        <li><a class="dropdown-item py-2" href="@Url.Action("Reviews", "Admin")"><i class="fas fa-comments me-2 text-warning"></i> Yorumlar</a></li>
                                        <li><a class="dropdown-item py-2" href="@Url.Action("AdminIndex", "Reservations")"><i class="fas fa-calendar-check me-2 text-secondary"></i> Rezervasyonlar</a></li>
                                    </ul>
                                </li>
                            }
                            else if (User.IsInRole("User"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle fw-medium text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-user me-1 text-success"></i> Panelim
                                    </a>
                                    <ul class="dropdown-menu shadow border-0" aria-labelledby="userDropdown">
                                        <li><a class="dropdown-item py-2" href="@Url.Action("Index", "User")"><i class="fas fa-tachometer-alt me-2 text-primary"></i> Dashboard</a></li>
                                        <li><a class="dropdown-item py-2" href="@Url.Action("Favorites", "User")"><i class="fas fa-heart me-2 text-danger"></i> Favorilerim</a></li>
                                        <li><a class="dropdown-item py-2" href="@Url.Action("MyReviews", "User")"><i class="fas fa-comments me-2 text-warning"></i> Yorumlarım</a></li>
                                        <li><a class="dropdown-item py-2" href="@Url.Action("Index", "Reservations")"><i class="fas fa-calendar-check me-2 text-info"></i> Rezervasyonlarım</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        <!-- Theme Toggle Button -->
                        <button id="themeToggle" class="btn btn-outline-light btn-sm" type="button" title="Tema Değiştir">
                            <i class="fas fa-moon" id="themeIcon"></i>
                        </button>

                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("BusinessOwner"))
                        {
                            <a class="btn btn-sm btn-warning text-dark" href="@Url.Action("Index", "BusinessOwner")">
                                <i class="fas fa-briefcase me-1"></i> İşletmelerim
                            </a>
                        }

                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-5">
        @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" || 
             (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index"))
        {
            @RenderBody()
        }
        else
        {
            <div class="container-fluid px-3 px-md-4">
                @RenderBody()
            </div>
        }
    </main>

    <footer class="footer mt-5">
        <div class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index") ? "container-fluid" : "container") py-5">
            <div class="row mb-4">
                <div class="col-12 text-center mb-4">
                    <img src="~/images/Logo.png" alt="Alanya İşletme Rehberi Logo" class="footer-logo mb-3" onerror="this.onerror=null; this.src='~/images/Logo.jpg';" />
                    <p class="text-white-50 mb-0">Alanya'nın en kapsamlı işletme rehberi</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-bold mb-4 text-white"><i class="fas fa-tags me-2 text-warning"></i>Kategoriler</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Search", "Home", new { category = "Restoran" })" class="text-light text-decoration-none d-flex align-items-center"><i class="fas fa-utensils me-2 text-warning"></i>Restoran</a></li>
                        <li class="mb-2"><a href="@Url.Action("Search", "Home", new { category = "Otel" })" class="text-light text-decoration-none d-flex align-items-center"><i class="fas fa-bed me-2 text-info"></i>Otel</a></li>
                        <li class="mb-2"><a href="@Url.Action("Search", "Home", new { category = "Mağaza" })" class="text-light text-decoration-none d-flex align-items-center"><i class="fas fa-store me-2 text-success"></i>Mağaza</a></li>
                        <li class="mb-2"><a href="@Url.Action("Search", "Home", new { category = "Spa & Wellness" })" class="text-light text-decoration-none d-flex align-items-center"><i class="fas fa-spa me-2 text-warning"></i>Spa & Wellness</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-bold mb-4 text-white"><i class="fas fa-link me-2 text-warning"></i>Hızlı Linkler</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")" class="text-light text-decoration-none d-flex align-items-center"><i class="fas fa-home me-2 text-primary"></i>Ana Sayfa</a></li>
                        <li class="mb-2"><a href="@Url.Action("Search", "Home")" class="text-light text-decoration-none d-flex align-items-center"><i class="fas fa-search me-2 text-info"></i>İşletme Ara</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "News")" class="text-light text-decoration-none d-flex align-items-center"><i class="fas fa-newspaper me-2 text-warning"></i>Haberler</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-bold mb-4 text-white"><i class="fas fa-phone me-2 text-warning"></i>İletişim</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3 d-flex align-items-center"><i class="fas fa-map-marker-alt me-3 text-danger"></i><span>Alanya, Antalya</span></li>
                        <li class="mb-3 d-flex align-items-center"><i class="fas fa-phone me-3 text-success"></i><span>+90 551 174 66 72</span></li>
                        <li class="mb-3 d-flex align-items-center"><i class="fas fa-envelope me-3 text-warning"></i><span>info@plafind.com</span></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="fw-bold mb-4 text-white"><i class="fas fa-share-alt me-2 text-warning"></i>Bizi Takip Edin</h5>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="#" class="btn btn-outline-warning btn-sm rounded-circle"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-outline-info btn-sm rounded-circle"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="btn btn-outline-danger btn-sm rounded-circle"><i class="fab fa-instagram"></i></a>
                    </div>
                    <div class="mt-4">
                        <h6 class="fw-bold text-white mb-3">Newsletter</h6>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="E-posta adresiniz">
                            <button class="btn btn-warning" type="button"><i class="fas fa-paper-plane"></i></button>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-4 border-secondary">

            <div class="row align-items-center">
                <div class="col-lg-6 col-md-12 mb-3 mb-lg-0">
                    <p class="mb-0 text-white"><i class="fas fa-copyright me-2 text-warning"></i>2025 - Alanya İşletme Rehberi - Tüm Hakları Saklıdır</p>
                </div>
                <div class="col-lg-6 col-md-12 text-lg-end">
                    <div class="d-flex flex-wrap gap-3 justify-content-lg-end">
                        <a href="@Url.Action("Privacy", "Home")" class="text-white text-decoration-none"><i class="fas fa-shield-alt me-1 text-warning"></i>Gizlilik Politikası</a>
                        <a href="@Url.Action("Help", "Home")" class="text-white text-decoration-none"><i class="fas fa-question-circle me-1 text-warning"></i>Yardım</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/location-picker.js" asp-append-version="true"></script>
    <script src="~/js/theme-toggle.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>